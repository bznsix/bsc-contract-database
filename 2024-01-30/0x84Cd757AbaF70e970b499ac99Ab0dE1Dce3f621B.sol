pragma solidity ^0.8.0;

import "openzeppelin-solidity/contracts/access/Ownable.sol";

contract RandomNumberGenerator is Ownable{

    function leaderboard(
        bytes32 _seed, uint256 _mod, uint256 _count, uint256 _min, uint256 _max
    ) onlyOwner external  returns (uint256[] memory) {

        require(_count > 0, "Count must be greater than 0");
        require(_min <= _max, "Min must be less than or equal to Max");

        uint256[] memory randomNumbers = new uint256[](_count);

        for (uint256 i = 0; i < _count; i++) {
            uint256 randomNumber = _simpleRandom(_seed, i, _mod);
            randomNumbers[i] = _min + (randomNumber % (_max - _min + 1));
        }

        emit Print(_seed, randomNumbers);

        return randomNumbers;
    }

    function _simpleRandom(bytes32 _seed, uint256 _nonce, uint256 _mod) internal view returns (uint256) {
        return uint256(keccak256(abi.encode(block.timestamp, block.difficulty, block.coinbase, blockhash(block.number + 1), _seed, _nonce, block.number))) % _mod;
    }

    event Print(bytes32 _seed, uint256[] r);


}
