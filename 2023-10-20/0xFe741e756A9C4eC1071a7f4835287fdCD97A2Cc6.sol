pragma solidity ^0.8.0;




contract Stakes is ReentrancyGuard {
    using SafeMath for uint256;

    IERC20 public asset;

    struct Record {
        uint256 startTime;
        uint256 amount;
        uint256 penalization;
        uint256 to;
        bool ended;
    }

    uint8 public interestRate = 40;
    uint256 public maturity = 7 days;
    uint8 public penalizationRate = 25;
    uint256 public lowerAmount = 1000000 * (10 ** 9);

    mapping(address => Record[]) public ledger;

    event StakeStart(address indexed user, uint256 value);
    event StakeEnd(address indexed user, uint256 value, uint256 penalty, uint256 interest);

    constructor(
        IERC20 _erc20
    ) {
        asset = _erc20;
    }

    function start(uint256 _value) external {
        require(_value >= lowerAmount, "Invalid value");

        Record[] storage records = ledger[msg.sender];

        if (records.length == 0 || records[records.length - 1].ended) {
            // This is the first stake or after a completed stake, so push a new Record.
            records.push(Record(block.timestamp, _value, 0, 0, false));
        } else {
            // This is an additional stake to the existing one, so update the existing Record.
            Record storage record = records[records.length - 1];
            record.amount = record.amount.add(_value);
        }

        // Transfer the tokens and start or update the stake.
        asset.transferFrom(msg.sender, address(this), _value);

        emit StakeStart(msg.sender, _value);
    }

    function end() external nonReentrant {
        Record[] storage records = ledger[msg.sender];
        require(records.length > 0, "No active stake");

        Record storage record = records[records.length - 1];
        require(!record.ended, "Invalid stake");

        uint256 timeElapsed = block.timestamp - record.startTime;
        uint256 interest; // Declare interest here

        if (timeElapsed < maturity) {
            uint256 penalty = record.amount * penalizationRate / 100;
            asset.transfer(msg.sender, record.amount - penalty);
            record.penalization = penalty;
        } else {
            interest = calculateInterest(record.amount, timeElapsed);
            asset.transfer(msg.sender, record.amount + interest);
            record.to = block.timestamp;
        }

        record.ended = true;
        emit StakeEnd(msg.sender, record.amount, record.penalization, interest);
    }

    function set(uint256 _lower, uint256 _maturity, uint8 _rate, uint8 _penalization) external {
        require(_penalization <= 100, "Invalid value");
        lowerAmount = _lower;
        maturity = _maturity;
        interestRate = _rate;
        penalizationRate = _penalization;
    }

    function totalTokensStakedBy(address account) external view returns (uint256) {
        uint256 totalTokensStaked = 0;
        Record[] storage records = ledger[account];

        for (uint256 i = 0; i < records.length; i++) {
            if (!records[i].ended) {
                totalTokensStaked = totalTokensStaked.add(records[i].amount);
            }
        }

        return totalTokensStaked;
    }

    function calculateInterest(uint256 _amount, uint256 _timeElapsed) internal view returns (uint256) {
        uint256 yearInSeconds = 365 days;
        return (_amount * interestRate * _timeElapsed) / (yearInSeconds * 100);
    }
}