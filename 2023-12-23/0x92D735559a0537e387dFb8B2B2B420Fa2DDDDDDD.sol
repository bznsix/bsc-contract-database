contract Context {
    constructor () {}

    function _msgSender() internal view returns (address) {
        return msg.sender;
    }
}

contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor () {
        address msgSender = _msgSender();
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function owner() public view returns (address) {
        return _owner;
    }


    function changeOwner(address newOwner) public onlyOwner {
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }

    modifier onlyOwner() {
        require(_owner == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    function renounceOwnership() public onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }
}

library SafeMath {
    function add(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a + b;
        require(c >= a, "SafeMath: addition overflow");
        return c;
    }

    function sub(uint256 a, uint256 b) internal pure returns (uint256) {
        return sub(a, b, "SafeMath: subtraction overflow");
    }

    function sub(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b <= a, errorMessage);
        uint256 c = a - b;
        return c;
    }

    function mul(uint256 a, uint256 b) internal pure returns (uint256) {
        if (a == 0) {
            return 0;
        }
        uint256 c = a * b;
        require(c / a == b, "SafeMath: multiplication overflow");
        return c;
    }

    function div(uint256 a, uint256 b) internal pure returns (uint256) {
        return div(a, b, "SafeMath: division by zero");
    }

    function div(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b > 0, errorMessage);
        uint256 c = a / b;
        return c;
    }
}

// Issuance contract
contract GbtIssunance is Context, Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // USDT contract address
    address public _usdt;
    // Total supply
    uint public _total;
    // Token contract address
    address public _token;
    // Broker contract address
    address public _broker;
    // User's purchase amount record
    mapping(address => uint) public _userBuyTotal;

    // Purchase record event
    event BuyRecord(address indexed account, uint price, uint amount, uint getAmount);

    constructor() {
        // Set USDT contract address
        _usdt = 0x55d398326f99059fF775485246999027B3197955;
        // Set token contract address
        _token = 0xb0d22255889850F41D3ffA5BA4152f8865AAAAAA;
        // Set broker contract address
        _broker = 0xF089427b2e862f419A6063336D3060096FBBBBBB;
        // Set total supply
        _total = 90000 * 10 ** 18;
    }

    // Set contract addresses
    function setAddress(address param, uint status) external onlyOwner {
        if (status == 0) {
            _token = param;
        } else if (status == 1) {
            _broker = param;
        }
    }

    // Get available purchase quota for an account
    function getQuota(address account) public view returns (uint amount) {
        uint userQuota = Broker(_broker).userQuota(account);
        if (userQuota > _userBuyTotal[account]) {
            amount = userQuota.sub(_userBuyTotal[account]);
        }
    }

    bool private locked;
    modifier nonReentrant() {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    // Buy issued tokens with specified amount
    function buy(uint amount) external nonReentrant() {
        require(amount > 0, "Amount must be greater than 0");
        uint tokenAmount = IERC20(_token).balanceOf(address(this));
        require(tokenAmount > 0, "Token quantity is 0");
        address account = _msgSender();
        require(getQuota(account) >= amount, "Issunance: The current user's purchase has reached the limit");

        uint backstopPrice = IERC20(_token).backstopPrice();
        uint sendAmount = amount.mul(1 * 10 ** uint(IERC20(_token).decimals())).div(backstopPrice);

        if (sendAmount > tokenAmount) {
            sendAmount = tokenAmount;
            amount = sendAmount.mul(backstopPrice).div(1 * 10 ** uint(IERC20(_token).decimals()));
        }

        IERC20(_usdt).safeTransferFrom(account, address(this), amount);
        uint balance = IERC20(_token).balanceOf(account);
        IERC20(_token).safeTransfer(account, sendAmount);
        IERC20(_usdt).safeTransfer(_token, amount);
        _userBuyTotal[account] += amount;

        emit BuyRecord(account, backstopPrice, amount, IERC20(_token).balanceOf(account).sub(balance));
    }
}