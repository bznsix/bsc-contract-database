        _previousBuyBurnFee = _buyBurnFee;
        _previousSellLpFee = _sellLpFee;
        _previousSellFounderFee = _sellFounderFee;

        _buyBurnFee = 0;
        _sellLpFee = 0;
        _sellFounderFee = 0;
    }

