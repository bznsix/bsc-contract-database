contract MinPitFutureB4BSC is Ownable{
    address public _tokenA; //token地址
    uint256 public _tokenPrice;  //token价格
    uint256 public _unitPrice;  //支付单价
    address public _collect; //收款地址

    constructor() Ownable(msg.sender){
        _tokenA = address(0x3d530305dE5f902A00D402Ce51ab8d0392eAa89b);
        _tokenPrice = 100000000000000000;
        _unitPrice = 20000000000000000000;
        _collect = 0x1f14E4140a134795561A2D63d3F86b26b4600562;
    }

    
    /**
    * type_ 1：M-Blind，2：M-Minerals，3：M-ReceiveBenefits，4：M-OrderFulfil，5：BSC-BuyMinpitB4
    **/

    //购买矿产。userAddr：用户地址；amount：eco数量；unitPrice：支付单价；time：时间戳
    event BuyMinpitB4(uint256 type_,address userAddr,address contractAddress,uint256 amount,uint256 unitPrice,uint256 time);

    function buyMinpitB4(address contractAddress) public{
        uint256 amount = _unitPrice * (10 ** 18) / _tokenPrice;
        IERC20(_tokenA).transferFrom(msg.sender,_collect,amount);
        emit BuyMinpitB4(5,msg.sender,contractAddress,amount,_unitPrice,block.timestamp);
    }

    function setTokenA(address val) public onlyOwner{
        _tokenA = val;
    }

    function setTokenPrice(uint256 val) public onlyOwner{
        _tokenPrice = val;
    }

    function setUnitPrice(uint256 val) public onlyOwner{
        _unitPrice = val;
    }

    function setCollect(address val) public onlyOwner{
        _collect = val;
    }
}