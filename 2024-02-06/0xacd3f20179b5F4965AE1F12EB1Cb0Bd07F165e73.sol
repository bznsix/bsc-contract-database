        require(
            bankRoll.isValidWager(address(this), tokenAddress),
            "Common: Not valid wager"
        );
        require(wager > 0, "Common: Wager is zero");

        if (tokenAddress == BNB) {
            require(
                msg.value >= wager + VRFFee,
                "Common: Not enough fee for VRF"
            );
        } else {
            require(msg.value >= VRFFee, "Common: Not enough fee for VRF");
            IERC20(tokenAddress).safeTransferFrom(
                _msgSender(),
                address(this),
                wager
            );
        }
    }

    function _transferToBankroll(
        address tokenAddress,
        uint256 amount
    ) internal {
        if (tokenAddress == BNB) {
            payable(address(bankRoll)).sendValue(amount);
        } else {
            IERC20(tokenAddress).safeTransfer(address(bankRoll), amount);
        }
    }

    function _transferPayout(
        address player,
        uint256 payout,
        address tokenAddress
    ) internal {
        bankRoll.transferPayout(player, payout, tokenAddress);
    }

