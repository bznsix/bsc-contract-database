contract CoinFlip is Common {
    using Counters for Counters.Counter;
    using EnumerableSet for EnumerableSet.UintSet;
    using Address for address payable;
    using SafeERC20 for IERC20;

    enum Status {
        RandomNumberPending,
        Closed,
        Refunded
    }
    struct Game {
        uint256 gameId;
        uint256 requestId;
        uint256 wagerAmount;
        address wagerAddress;
        address player;
        Status status;
        uint256 timestamp;
        uint8 side;
        uint256 payout;
        uint256 multiplier;
        uint256 randomWord;
        uint8 result;
    }
    struct GameView {
        uint256 gameId;
        uint256 requestId;
        uint256 wagerAmount;
        address wagerAddress;
        address player;
        Status status;
        uint256 timestamp;
        uint8 side;
        uint256 payout;
        uint256 multiplier;
        uint256 randomWord;
        uint8 result;
        bool canGetRefund;
    }

    uint256 public kellyFactor;
    Counters.Counter public totalGames;
    uint256 public multiplier;
    uint256 public totalHeads;
    uint256 public totalTails;
    mapping(uint256 => Game) public games;
    mapping(address => EnumerableSet.UintSet) private playerGames;
    mapping(uint256 => uint256) public requests;

    constructor(
        uint64 _subId,
        bytes32 _keyHash,
        uint32 _callbackGasLimit,
        uint16 _requestConfirmations,
        uint32 _numWords,
        address vrfCoordinator,
        IBankRoll _bankRoll,
        uint256 _refundDelay,
        uint256 _kellyFactor,
        uint256 _multiplier
    )
        Common(
            _subId,
            _keyHash,
            _callbackGasLimit,
            _requestConfirmations,
            _numWords,
            vrfCoordinator,
            _bankRoll,
            _refundDelay
        )
    {
        kellyFactor = _kellyFactor;
        multiplier = _multiplier;
    }

    function play(
        uint256 wagerAmount,
        address tokenAddress,
        uint8 side
    ) external payable nonReentrant {
        require(tokenAddress != address(0), "CoinFlip: Wrong tokenAddress");
        _kellyWager(wagerAmount, tokenAddress);
        require(side >= 0 && side <= 1, "CoinFlip: Wrong side");
        _transferWager(wagerAmount, tokenAddress);

        uint256 requestId = _requestRandomWords();

        uint256 gameId = totalGames.current();
        requests[requestId] = gameId;
        games[gameId] = Game({
            gameId: gameId,
            requestId: requestId,
            wagerAmount: wagerAmount,
            wagerAddress: tokenAddress,
            player: _msgSender(),
            status: Status.RandomNumberPending,
            timestamp: block.timestamp,
            side: side,
            payout: 0,
            multiplier: multiplier,
            randomWord: 0,
            result: 0
        });
        playerGames[_msgSender()].add(gameId);
        totalGames.increment();
        emit GameOpened(gameId, requestId);
    }

    function refund(uint256 gameId) external nonReentrant {
        Game storage game = games[gameId];
        require(game.player == _msgSender(), "CoinFlip: Wrong player");
        require(
            game.status == Status.RandomNumberPending,
            "CoinFlip: Wrong status"
        );
        require(
            block.timestamp > game.timestamp + refundDelay,
            "CoinFlip: Too soon"
        );

        address playerAddress = game.player;
        uint256 wager = game.wagerAmount;
        address tokenAddress = game.wagerAddress;

        game.status = Status.Refunded;

        if (tokenAddress == BNB) {
            payable(playerAddress).sendValue(wager);
        } else {
            IERC20(tokenAddress).safeTransfer(playerAddress, wager);
        }

        emit GameRefunded(gameId);
    }

    function fulfillRandomWords(
        uint256 requestId,
        uint256[] memory randomWords
    ) internal override {
        uint256 gameId = requests[requestId];
        Game storage game = games[gameId];

        require(
            game.status == Status.RandomNumberPending,
            "CoinFlip: Wrong status"
        );

        address playerAddress = game.player;
        address tokenAddress = game.wagerAddress;
        uint8 side = game.side;
        uint256 wagerAmount = game.wagerAmount;
        uint256 multiplier_ = game.multiplier;
        uint8 result = uint8(randomWords[0] % 2);
        uint256 payout;

        if (side == result) {
            payout = (wagerAmount * multiplier_) / 1e6;
            game.payout = payout;
        }

        if (result == 0) {
            totalHeads++;
        } else {
            totalTails++;
        }

        game.status = Status.Closed;
        game.randomWord = randomWords[0];
        game.result = result;

        _transferToBankroll(tokenAddress, wagerAmount);

        if (payout != 0) {
            _transferPayout(playerAddress, payout, tokenAddress);
        }

        emit GameClosed(gameId);
    }

    /*** INTERNAL FUNCTIONS ***/
    function _kellyWager(uint256 wager, address tokenAddress) internal view {
        uint256 balance;
        if (tokenAddress == BNB) {
            balance = address(bankRoll).balance;
        } else {
            balance = IERC20(tokenAddress).balanceOf(address(bankRoll));
        }
        uint256 maxWager = (balance * kellyFactor * 11) / (10 * 1e18);

        require(wager <= maxWager, "CoinFlip: Wager above limit");
    }

    /*** ADMIN FUNCTIONS ***/
    function setMultiplier(uint256 _multiplier) external onlyOwner {
        multiplier = _multiplier;
    }

    /*** VIEW FUNCTIONS ***/
    function viewPlayerGames(
        address _player,
        uint256 _cursor,
        uint256 _size
    ) external view returns (GameView[] memory activePlayerGames) {
        uint256 gamesLength = playerGames[_player].length();
        if (_size > (gamesLength - _cursor)) {
            _size = gamesLength - _cursor;
        }
        activePlayerGames = new GameView[](_size);
        for (uint256 i = 0; i < _size; i++) {
            Game memory game = games[playerGames[_player].at(i + _cursor)];
            activePlayerGames[i] = GameView({
                gameId: game.gameId,
                requestId: game.requestId,
                wagerAmount: game.wagerAmount,
                wagerAddress: game.wagerAddress,
                player: game.player,
                status: game.status,
                timestamp: game.timestamp,
                side: game.side,
                payout: game.payout,
                multiplier: game.multiplier,
                randomWord: game.randomWord,
                result: game.result,
                canGetRefund: block.timestamp > game.timestamp + refundDelay &&
                    game.status == Status.RandomNumberPending
            });
        }
    }

    function viewPlayerGamesLength(
        address _player
    ) external view returns (uint256 activePlayerGamesLength) {
        activePlayerGamesLength = playerGames[_player].length();
    }

    function viewGame(
        uint256 _gameId
    ) external view returns (GameView memory gameView) {
        Game memory game = games[_gameId];
        gameView = GameView({
            gameId: game.gameId,
            requestId: game.requestId,
            wagerAmount: game.wagerAmount,
            wagerAddress: game.wagerAddress,
            player: game.player,
            status: game.status,
            timestamp: game.timestamp,
            side: game.side,
            payout: game.payout,
            multiplier: game.multiplier,
            randomWord: game.randomWord,
            result: game.result,
            canGetRefund: block.timestamp > game.timestamp + refundDelay &&
                game.status == Status.RandomNumberPending
        });
    }

    function viewGames(
        uint256 _cursor,
        uint256 _size
    ) external view returns (GameView[] memory gamesView) {
        uint256 gamesLength = totalGames.current();
        if (_size > (gamesLength - _cursor)) {
            _size = gamesLength - _cursor;
        }
        gamesView = new GameView[](_size);
        for (uint256 i = 0; i < _size; i++) {
            Game memory game = games[i + _cursor];
            gamesView[i] = GameView({
                gameId: game.gameId,
                requestId: game.requestId,
                wagerAmount: game.wagerAmount,
                wagerAddress: game.wagerAddress,
                player: game.player,
                status: game.status,
                timestamp: game.timestamp,
                side: game.side,
                payout: game.payout,
                multiplier: game.multiplier,
                randomWord: game.randomWord,
                result: game.result,
                canGetRefund: block.timestamp > game.timestamp + refundDelay &&
                    game.status == Status.RandomNumberPending
            });
        }
    }

    function viewMaxWager(
        address tokenAddress
    ) external view returns (uint256 maxWager) {
        uint256 balance;
        if (tokenAddress == BNB) {
            balance = address(bankRoll).balance;
        } else {
            balance = IERC20(tokenAddress).balanceOf(address(bankRoll));
        }
        maxWager = (balance * kellyFactor) / 1e18;
    }

    function viewTotalGames() external view returns (uint256) {
        return totalGames.current();
    }

    function canRefundGame(uint256 gameId) external view returns (bool) {
        Game storage game = games[gameId];
        return
            block.timestamp > game.timestamp + refundDelay &&
            game.status == Status.RandomNumberPending;
    }
}
