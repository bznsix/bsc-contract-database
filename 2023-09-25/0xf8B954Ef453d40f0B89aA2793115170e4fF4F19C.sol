ount++] = msg.sender;\n        depositsPrices[msg.sender].push(msg.value);\n        price += stepPrice;\n\n        emit UserAdded(msg.sender, msg.value);\n    }\n\n    function calculate() public onlyOwner {\n        uint32 index;\n\n        if(depositsCount \u003c= 10) { // one get 50%\n            sendPercent(index++, 50);\n        } else if(depositsCount \u003c= 20) { // one get 35% and one get 15%\n            sendPercent(index++, 35);\n            sendPercent(index++, 15);\n        } else if(depositsCount \u003c= 100) { // one get 30%, one get 15% and one get 5%\n            sendPercent(index++, 30);\n            sendPercent(index++, 15);\n            sendPercent(index++, 5);\n        } else if(depositsCount \u003c= 200) { // two get for 15%, two get for 7% and two get 3%\n            sendPercent(index++, 15);\n            sendPercent(index++, 15);\n            sendPercent(index++, 7);\n            sendPercent(index++, 7);\n            sendPercent(index++, 3);\n            sendPercent(index++, 3);\n        } else if(depositsCount \u003c= 500) { // four get for 7%, four get for 4% and four get 2%\n            for(uint8 i=0; i\u003c4; i++) {\n                sendPercent(index++, 7);\n            }\n            for(uint8 i=0; i\u003c4; i++) {\n                sendPercent(index++, 4);\n            }\n            for(uint8 i=0; i\u003c4; i++) {\n                sendPercent(index++, 2);\n            }\n        } else { // ten get for 3%, ten get for 2% and ten get 1%\n            for(uint8 i=0; i\u003c10; i++) {\n                sendPercent(index++, 3);\n            }\n            for(uint8 i=0; i\u003c10; i++) {\n                sendPercent(index++, 2);\n            }\n            for(uint8 i=0; i\u003c10; i++) {\n                sendPercent(index++, 1);\n            }\n        }\n\n        clear();\n\n        emit OwnerCommission(address(this).balance);\n        payable(owner()).transfer(address(this).balance);\n    }\n\n    function sendPercent(uint32 index, uint8