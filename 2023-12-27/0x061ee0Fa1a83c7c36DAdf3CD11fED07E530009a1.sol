import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol"; // Import ERC20 interface

contract AquariGovernance is ReentrancyGuard, AccessControl {
    bytes32 private immutable STAKEHOLDER_ROLE = keccak256("STAKEHOLDER");
    uint32 immutable MIN_VOTE_DURATION = 24 hours;

    uint256 totalProposals;
    mapping(uint256 => ProposalStruct) private raisedProposals;
    mapping(address => uint256[]) private stakeholderVotes;
    mapping(uint256 => VotedStruct[]) private votedOn; // Mapping to store votes for each proposal

    IERC20 public aquariToken; // Aquari ERC20 token contract

    struct ProposalStruct {
        uint256 id;
        uint256 duration;
        uint256 upvotes;
        uint256 downvotes;
        string title;
        string description;
        bool passed;
        address proposer;
    }

    struct VotedStruct {
        address voter;
        uint256 timestamp;
        bool choosen;
    }

    event Action(
        address indexed initiator,
        bytes32 role,
        string message,
        uint256 proposalId
    );


//Check if Users have Aquari Balance
    modifier stakeholderOnly(string memory message) {
        require(aquariToken.balanceOf(msg.sender) > 0, "You must have an Aquari balance to Participate in Governance");
        _;
    }

//Run At Contract Startup
    constructor(address _aquariToken) {
        aquariToken = IERC20(0x6500197A2488610ACA288fd8E2DFE88Ec99E596c); // Set Aquari ERC20 token contract address
    }

    // Create a new proposal
    function createProposal(
        string calldata title,
        string calldata description
    ) external stakeholderOnly("Proposal Creation Allowed for Stakeholders only") returns (ProposalStruct memory) {
        uint256 proposalId = totalProposals++;
        ProposalStruct storage proposal = raisedProposals[proposalId];

        // Initialize the proposal details
        proposal.id = proposalId;
        proposal.proposer = msg.sender;
        proposal.title = title;
        proposal.description = description;
        proposal.duration = block.timestamp + MIN_VOTE_DURATION;

        emit Action(msg.sender, STAKEHOLDER_ROLE, "PROPOSAL RAISED", proposalId);

        return proposal;
    }

    // Vote on a proposal
    function performVote(uint256 proposalId, bool choosen)
        external
        stakeholderOnly("Unauthorized: Stakeholders only")
        returns (VotedStruct memory)
    {
        ProposalStruct storage proposal = raisedProposals[proposalId];

        handleVoting(proposal);

        // Update the vote count based on the user's choice
        if (choosen) proposal.upvotes++;
        else proposal.downvotes++;

        // Record the vote for the user
        stakeholderVotes[msg.sender].push(proposalId);

        // Record the vote details for the proposal
        votedOn[proposalId].push(VotedStruct(msg.sender, block.timestamp, choosen));

        emit Action(msg.sender, STAKEHOLDER_ROLE, "PROPOSAL VOTE", proposalId);

        return VotedStruct(msg.sender, block.timestamp, choosen);
    }

    // Check if the user is eligible to vote
    function handleVoting(ProposalStruct storage proposal) private {
        if (proposal.passed || proposal.duration <= block.timestamp) {
            proposal.passed = true;
            revert("Proposal duration expired");
        }

        // Check if the user has already voted on the proposal
        uint256[] memory tempVotes = stakeholderVotes[msg.sender];
        for (uint256 votes = 0; votes < tempVotes.length; votes++) {
            if (proposal.id == tempVotes[votes]) revert("Double voting not allowed");
        }
    }

    // Get all proposals
    function getProposals() external view returns (ProposalStruct[] memory props) {
        props = new ProposalStruct[](totalProposals);

        for (uint256 i = 0; i < totalProposals; i++) {
            props[i] = raisedProposals[i];
        }
    }

    // Get details of a specific proposal
    function getProposal(uint256 proposalId) external view returns (ProposalStruct memory) {
        return raisedProposals[proposalId];
    }

    // Get all votes for a specific proposal
    function getVotesOf(uint256 proposalId) external view returns (VotedStruct[] memory) {
        return votedOn[proposalId];
    }

    // Get votes cast by the caller
    function getStakeholderVotes() external view stakeholderOnly("Unauthorized: not a stakeholder") returns (uint256[] memory) {
        return stakeholderVotes[msg.sender];
    }
}