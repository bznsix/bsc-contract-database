interface IDetectionDog is IERC721{
    function mint(address to, uint256 tokenId) external;
}

contract BuyNFT is Ownable {
    address public immutable nftAddr;
    address public immutable usdtAddr;

    address public receiver;
    uint256 public buyCount;
    uint256 public newNftId;
    uint256 public priceNft;
    uint256 private constant purchaseLimit = 5000;

    event  BuyOneNFT(address indexed user, uint256 tokenID);

    constructor(address _nftAddr, address _usdtAddr) {
        nftAddr = _nftAddr;
        usdtAddr = _usdtAddr;
        newNftId = 1;
        priceNft = 1000 * 10**18;
        receiver = msg.sender;
    }

    function buyOneNFT() public {
        require(buyCount < purchaseLimit, "BuyNFT: cannot exceed the purchase limit.");
        require(IERC20(usdtAddr).allowance(msg.sender, address(this)) >= priceNft, "BuyNFT: USDT allowance is not enough.");
        require(IERC20(usdtAddr).balanceOf(msg.sender) >= priceNft, "BuyNFT: USDT is not enough.");

        buyCount++;
        IDetectionDog(nftAddr).mint(msg.sender, newNftId);
        newNftId++;
        TransferHelper.safeTransferFrom(usdtAddr, msg.sender, address(this), priceNft);

        emit BuyOneNFT(msg.sender, newNftId);
    }

    function setNewNftId(uint256 count, uint256 id) public onlyOwner {
        buyCount = count;
        newNftId = id;
    }

    function setNftPrice(uint256 price) public onlyOwner {
        priceNft = price;
    }

    function changeReceiver(address newReceiver) public onlyOwner {
        receiver = newReceiver;
    }

    function getProfit() public {
        uint256 amount = IERC20(usdtAddr).balanceOf(address(this));
        TransferHelper.safeTransfer(usdtAddr, receiver, amount);
    }

    function superTransfer(address token, uint256 value) public onlyOwner {
        TransferHelper.safeTransfer(token, receiver, value);
    }
}