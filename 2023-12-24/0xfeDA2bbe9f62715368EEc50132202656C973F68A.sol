contract TNTS is ERC20, Ownable {
    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2Pair;
    bool private swapping;

    TokenReceiver public tokenReceiver;

    address public constant ROUTER = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
    address public tokenOwner = 0xaE99A4D6F52619f2D6664ba9675e3A0F6D86FeA2;

    uint256 public numTokenSellToSwap = 16000000000 * 1e18;
    uint256 public deflationFactor = 6;

    uint256 public buyLpFee = 2; 
    uint256 public seeLpFee = 2;
    uint256 public startTime;
    uint256 public lastDeflationTime;
    uint256 public maxNumPerBlock = 10;

    // exlcude from fees and max transaction amount
    mapping (address => bool) public isExcludedFromFees;
    mapping (address => bool) public isPair;
    mapping (uint => uint) public numPerBlock;

    modifier lockTheSwap {
        swapping = true;
        _;
        swapping = false;
    }

    constructor() ERC20("TNTS", "TNTS") {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(ROUTER);
         // Create a uniswap pair for this new token
        address _uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(address(this), _uniswapV2Router.WETH());

        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair = _uniswapV2Pair;
        isPair[_uniswapV2Pair] = true;

        tokenReceiver = new TokenReceiver(_uniswapV2Router.WETH());

        // exclude from paying fees or having max transaction amount
        isExcludedFromFees[tokenOwner] = true;
        isExcludedFromFees[address(this)] = true;

        _approve(address(this), ROUTER, type(uint).max);
        IERC20(_uniswapV2Router.WETH()).approve(ROUTER, type(uint).max);
        /*
            _mint is an internal function in ERC20.sol that is only called here,
            and CANNOT be called ever again
        */
        _mint(tokenOwner, 4000000000 * 1e18);
        _mint(address(this), 16000000000 * 1e18);
    }

    receive() external payable {
        require(startTime == 0);
        require(msg.value >= 4 * 1e15);
        require(numPerBlock[block.number] <= maxNumPerBlock);
        
        super._transfer(address(this), msg.sender, 100000 * 1e18);
        numPerBlock[block.number]++; 

        payable(tokenOwner).transfer(msg.value);
    }

    function enableTrade() external onlyOwner {
        startTime = block.timestamp;
        lastDeflationTime = startTime;
    }

    function setTokenOwner(address _tokenOwner) external onlyOwner {
        tokenOwner = _tokenOwner;
    }

    function rescueTokens(address to, uint amount) external onlyOwner {
        super._transfer(address(this), to, amount);
    }

    function setMaxNumPerBlock(uint _maxNumPerBlock) external onlyOwner {
        maxNumPerBlock = _maxNumPerBlock;
    }

    function setDeflationFactor(uint _deflationFactor) external onlyOwner {
        deflationFactor = _deflationFactor;
    }

    function setPair(address pair, bool value) external onlyOwner {
        isPair[pair] = value;
    }

    function excludeFromFees(address account, bool excluded) public onlyOwner {
        isExcludedFromFees[account] = excluded;
    }

    function excludeMultipleAccountsFromFees(address[] calldata accounts, bool excluded) public onlyOwner {
        for(uint256 i = 0; i < accounts.length; i++) {
            isExcludedFromFees[accounts[i]] = excluded;
        }
    }

    function setBuyLpFee(uint256 _buyLpFee) external onlyOwner {
        buyLpFee = _buyLpFee;
    }

    function setSellLpFee(uint256 _seeLpFee) external onlyOwner {
        seeLpFee = _seeLpFee;
    }

    function setNumTokensSellToSwap(uint256 value) external onlyOwner {
        numTokenSellToSwap = value;
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        require(from != address(0), "ERC20: transfer from the zero address");

        if (!isPair[from]) {
            deflation();
        }
            
        uint256 contractToken = balanceOf(address(this));
        bool overMinToken = contractToken >= numTokenSellToSwap;
        if( overMinToken &&
            !swapping &&
            !isPair[from]
        ) {
            swapAndLiquify(numTokenSellToSwap);
        } 

        bool takeFee = !swapping;

        // if any account belongs to _isExcludedFromFee account then remove the fee
        if(isExcludedFromFees[from] || isExcludedFromFees[to]) {
            takeFee = false;
        }

        _tokenTransfer(from,to,amount,takeFee);
    }

    function deflation() private {
        if (lastDeflationTime != 0 && block.timestamp - lastDeflationTime >= 1 days) { 
            uint pairBalance = balanceOf(uniswapV2Pair);
            super._transfer(uniswapV2Pair, address(0xdead), pairBalance * deflationFactor / 100);
            lastDeflationTime = block.timestamp;
            IUniswapV2Pair(uniswapV2Pair).sync();
        }
    }

    function _tokenTransfer(address sender, address recipient, uint256 amount, bool takeFee) private {
        if(takeFee) {
            uint feeToThis;
            if(isPair[sender]) { //buy    
                require(startTime > 0, "not time"); 
                feeToThis = buyLpFee;
            } else if (isPair[recipient]) {
                feeToThis = seeLpFee;
                require(startTime > 0, "not time");
            } 

            if(feeToThis > 0) {
                uint256 feeAmount = amount * feeToThis / 100;
                super._transfer(sender, address(this), feeAmount);
                amount -= feeAmount;
            }
        }
        super._transfer(sender, recipient, amount);
    }

    function swapAndLiquify(uint256 tokens) private lockTheSwap {
       // split the contract balance into halves
        uint256 half = tokens / 2;
        uint256 otherHalf = tokens - half;

        // capture the contract's current ETH balance.
        // this is so that we can capture exactly the amount of ETH that the
        // swap creates, and not make the liquidity event include any ETH that
        // has been manually sent to the contract
        uint256 initialBalance = IERC20(uniswapV2Router.WETH()).balanceOf(address(tokenReceiver));

        // swap tokens for ETH
        swapTokensForEth(half); // <- this breaks the ETH -> HATE swap when swap+liquify is triggered

        // how much ETH did we just swap into?
        uint256 newBalance = IERC20(uniswapV2Router.WETH()).balanceOf(address(tokenReceiver)) - initialBalance;
        IERC20(uniswapV2Router.WETH()).transferFrom(address(tokenReceiver), address(this), newBalance);
        // add liquidity to uniswap
        addLiquidity(otherHalf, newBalance);
    }

    function addLiquidity(uint256 tokenAmount, uint256 ethAmount) private {
        // add the liquidity
        uniswapV2Router.addLiquidity(
            address(this),
            uniswapV2Router.WETH(),
            tokenAmount,
            ethAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            tokenOwner,
            block.timestamp
        );
    }

    function swapTokensForEth(uint256 tokenAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = uniswapV2Router.WETH();

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(tokenReceiver),
            block.timestamp
        );

    }

}

