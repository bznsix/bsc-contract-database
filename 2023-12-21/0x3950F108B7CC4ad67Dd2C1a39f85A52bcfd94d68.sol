contract Meed is ContractGuard {
    using SafeERC20 for IERC20;
    using Address for address;
    using SafeMath for uint256;

    /* ========= CONSTANT VARIABLES ======== */

    uint256 public constant PERIOD = 6 hours;

    /* ========== STATE VARIABLES ========== */

    // governance
    address public operator;

    // flags
    bool public initialized = false;

    // epoch
    uint256 public startTime;
    uint256 public epoch = 0;
   

   

    // core components
   

    address public peg1;
    address public peg2;
    address public peg3;
    address public pyreGAS;
    address public iwv;
    address public meedTaxReceiver;

    

    
  
    address public pyreGASOracle;
    address public peg1Oracle;
    address public peg2Oracle;
    address public peg3Oracle;

    // price
    uint256 public tombPriceOne;
    uint256 public pegPriceOne;
    uint256 public pegPriceCeiling;
    uint256 public tombPriceCeiling;
    uint256 public meedTax = 30;
    uint256 public peg1AmountLeft = 0;
    uint256 public peg2AmountLeft = 1;
    uint256 public peg3AmountLeft = 1;

    

    uint256[] public twapTiers;
    uint256[] public decayRateTiers;
    uint256 public decayRate;

    

 

    /* =================== Added variables =================== */
   
    uint256 public previousEpochPyreGASPrice;
   

 

    /* =================== Events =================== */

    event Initialized(address indexed executor, uint256 at);
    event BurnedBonds(address indexed from, uint256 bondAmount);
    event RedeemedBonds(address indexed from, uint256 tombAmount, uint256 bondAmount);
    event BoughtBonds(address indexed from, uint256 _pegAmount, uint256 _pyreGasAmount);
    event TreasuryFunded(uint256 timestamp, uint256 seigniorage);
    event IWVFunded(uint256 timestamp, uint256 seigniorage);
    event DaoFundFunded(uint256 timestamp, uint256 seigniorage);
    event DevFundFunded(uint256 timestamp, uint256 seigniorage);

    /* =================== Modifier =================== */

    modifier onlyOperator() {
        require(operator == msg.sender, "Treasury: caller is not the operator");
        _;
    }

    modifier checkCondition {
        require(now >= startTime, "Treasury: not started yet");

        _;
    }

    modifier checkEpoch {
        require(now >= nextEpochPoint(), "Treasury: not opened yet");

        _;

        epoch = epoch.add(1);
      
    }

    modifier checkOperator {
        require(
            IBasisAsset(pyreGAS).operator() == address(this) &&
                Operator(iwv).operator() == address(this),
            "Treasury: need more permission"
        );

        _;
    }

    modifier notInitialized {
        require(!initialized, "Treasury: already initialized");

        _;
    }

    /* ========== VIEW FUNCTIONS ========== */

    function isInitialized() public view returns (bool) {
        return initialized;
    }

    // epoch
    function nextEpochPoint() public view returns (uint256) {
        return startTime.add(epoch.mul(PERIOD));
    }

    // oracle
   

    function getPyreGASPrice() public view returns (uint256 tombPrice) {
        try IOracle(pyreGASOracle).consult(pyreGAS, 1e18) returns (uint144 price) {
            return uint256(price);
        } catch {
            revert("Treasury: failed to consult PyreGAS price from the oracle");
        }
    }

    function getPeg1Price() public view returns (uint256 pegPrice) {
        try IOracle(peg1Oracle).consult(peg1, 1e18) returns (uint144 price) {
            return uint256(price);
        } catch {
            revert("Treasury: failed to consult TOMB price from the oracle");
        }
    }

    function getPeg2Price() public view returns (uint256 pegPrice) {
        try IOracle(peg2Oracle).consult(peg2, 1e18) returns (uint144 price) {
            return uint256(price);
        } catch {
            revert("Treasury: failed to consult TOMB price from the oracle");
        }
    }

    function getPeg3Price() public view returns (uint256 pegPrice) {
        try IOracle(peg3Oracle).consult(peg3, 1e18) returns (uint144 price) {
            return uint256(price);
        } catch {
            revert("Treasury: failed to consult TOMB price from the oracle");
        }
    }

    

  

    

   

   

  

   

    /* ========== GOVERNANCE ========== */

    function initialize(
        address _peg1,
        address _peg2,
        address _peg3,
        address _pyreGAS,
        address _pyreGASOracle,
        address _peg1Oracle,
        address _peg2Oracle,
        address _peg3Oracle,
        address _iwv,
        uint256 _startTime
    ) public notInitialized {
        peg1 = _peg1;
        peg2 = _peg2;
        peg3 = _peg3;
        pyreGAS = _pyreGAS;
        pyreGASOracle = _pyreGASOracle;
        peg1Oracle = _peg1Oracle;
        peg2Oracle = _peg2Oracle;
        peg3Oracle = _peg3Oracle;
        iwv = _iwv;
        startTime = _startTime;

        pegPriceOne = 10**18;
        pegPriceCeiling = pegPriceOne.mul(80).div(100);

        // exclude contracts from total supply
     

        // Dynamic max expansion percent
        twapTiers = [0, 0.4*1e18, 0.6*1e18, 0.8*1e18];
        decayRateTiers = [160, 40, 20, 0];
        

        

       

        initialized = true;
        operator = msg.sender;
        emit Initialized(msg.sender, block.number);
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

   

    function setIWV(address _iwv) external onlyOperator {
        iwv = _iwv;
    }

 

    

    function setPeg1Oracle(address _peg1Oracle) external onlyOperator {
        peg1Oracle = _peg1Oracle;
    }

    function setPeg2Oracle(address _peg2Oracle) external onlyOperator {
        peg2Oracle = _peg2Oracle;
    }

    function setPeg3Oracle(address _peg3Oracle) external onlyOperator {
        peg3Oracle = _peg3Oracle;
    }

    function setPeg1(address _peg1) external onlyOperator {
        peg1 = _peg1;
    }

    function setPeg2(address _peg2) external onlyOperator {
        peg2 = _peg2;
    }

    function setPeg3(address _peg3) external onlyOperator {
        peg3 = _peg3;
    }

    function setMeedTaxReceiver(address _meedTaxReceiver) external onlyOperator {
        meedTaxReceiver = _meedTaxReceiver;
    }

    function setMeedTax(uint256 _meedTax) external onlyOperator {
        meedTax = _meedTax;
    }

  

  

    function setTwapTiers(uint8 _index, uint256 _value) external onlyOperator returns (bool) {
        require(_index >= 0, "Index has to be higher than 0");
        require(_index < 9, "Index has to be lower than count of tiers");
      
        twapTiers[_index] = _value;
        return true;
    }

    function setDecayRateTiers(uint8 _index, uint256 _value) external onlyOperator returns (bool) {
        require(_index >= 0, "Index has to be higher than 0");
        require(_index < 9, "Index has to be lower than count of tiers");
        require(_value >= 10 && _value <= 1000, "_value: out of range"); // [0.1%, 10%]
        decayRateTiers[_index] = _value;
        return true;
    }

 

 

  


   

    
 

   

   

  


    /* ========== MUTABLE FUNCTIONS ========== */


    function _updatePegPrices() internal {
        try IOracle(peg1Oracle).update() {} catch {}
        try IOracle(peg2Oracle).update() {} catch {}
        try IOracle(peg3Oracle).update() {} catch {}
        try IOracle(pyreGASOracle).update() {} catch {}
    }

    function getPegCirculatingSupply(address _peg) public view returns (uint256) {
        IERC20 pegErc20 = IERC20(_peg);
        uint256 totalSupply = pegErc20.totalSupply();
       
        return totalSupply;
    }

    

    

     function meedpeg1(uint256 _pegAmount) external onlyOneBlock checkCondition  {
       require(_pegAmount > 0, "Treasury: cannot purchase bonds with zero amount");

        uint256 pegPrice = getPeg1Price();
        require(
            pegPrice < pegPriceCeiling, // price < $1
            "Treasury: tombPrice not eligible for bond purchase"
        );

        require(_pegAmount <= peg1AmountLeft, "Treasury: not enough bond left to purchase");

        uint256 _meedTaxAmount = _pegAmount.mul(meedTax).div(1000);
        uint256 _pegBurnAmount = _pegAmount.sub(_meedTaxAmount);
        uint256 _pyreGasAmount = (_pegAmount.sub(_meedTaxAmount)).div(1000);
       
        peg1AmountLeft = peg1AmountLeft.sub(_pegAmount);

        IERC20(peg1).transferFrom(msg.sender, address(this), _pegAmount);
        IERC20(peg1).transfer(meedTaxReceiver, _meedTaxAmount);
        IBasisAsset(peg1).burn(_pegBurnAmount);
        IBasisAsset(pyreGAS).mint(msg.sender, _pyreGasAmount);
       

        emit BoughtBonds(msg.sender, _pegAmount, _pyreGasAmount);
    }

    function meedpeg2(uint256 _pegAmount) external onlyOneBlock checkCondition  {
        require(_pegAmount > 0, "Treasury: cannot purchase bonds with zero amount");

        uint256 pegPrice = getPeg2Price();
        require(
            pegPrice < pegPriceCeiling, // price < $1
            "Treasury: tombPrice not eligible for bond purchase"
        );

        require(_pegAmount <= peg2AmountLeft, "Treasury: not enough bond left to purchase");

        uint256 _meedTaxAmount = _pegAmount.mul(meedTax).div(1000);
        uint256 _pegBurnAmount = _pegAmount.sub(_meedTaxAmount);
        uint256 _pyreGasAmount = (_pegAmount.sub(_meedTaxAmount)).div(100);
       
        peg2AmountLeft = peg2AmountLeft.sub(_pegAmount);

        IERC20(peg2).transferFrom(msg.sender, address(this), _pegAmount);
        IERC20(peg2).transfer(meedTaxReceiver, _meedTaxAmount);
        IBasisAsset(peg2).burn(_pegBurnAmount);
        IBasisAsset(pyreGAS).mint(msg.sender, _pyreGasAmount);
       

        emit BoughtBonds(msg.sender, _pegAmount, _pyreGasAmount);
    }

    function meedpeg3(uint256 _pegAmount) external onlyOneBlock checkCondition  {
        require(_pegAmount > 0, "Treasury: cannot purchase bonds with zero amount");

        uint256 pegPrice = getPeg3Price();
        require(
            pegPrice < pegPriceCeiling, // price < $1
            "Treasury: tombPrice not eligible for bond purchase"
        );

        require(_pegAmount <= peg3AmountLeft, "Treasury: not enough bond left to purchase");

        uint256 _meedTaxAmount = _pegAmount.mul(meedTax).div(1000);
        uint256 _pegBurnAmount = _pegAmount.sub(_meedTaxAmount);
        uint256 _pyreGasAmount = (_pegAmount.sub(_meedTaxAmount)).div(10);
       
        peg3AmountLeft = peg3AmountLeft.sub(_pegAmount);

        IERC20(peg3).transferFrom(msg.sender, address(this), _pegAmount);
        IERC20(peg3).transfer(meedTaxReceiver, _meedTaxAmount);
        IBasisAsset(peg3).burn(_pegBurnAmount);
        IBasisAsset(pyreGAS).mint(msg.sender, _pyreGasAmount);
       

        emit BoughtBonds(msg.sender, _pegAmount, _pyreGasAmount);
    }


    function _sendToIWV(uint256 _amount) internal {
        

        IERC20(pyreGAS).safeApprove(iwv, 0);
        IERC20(pyreGAS).safeApprove(iwv, _amount);
        IIWV(iwv).allocateIncantations(_amount);
        emit IWVFunded(now, _amount);
    }


    function _calculateDecayRate(uint256 _twap) internal returns (uint256) {
        for (uint8 tierId = 3; tierId >= 0; --tierId) {
            if (_twap >= twapTiers[tierId]) {
                decayRate = decayRateTiers[tierId];
                break;
            }
        }
        return decayRate;
    }

    function allocateIncantations() external onlyOneBlock checkCondition checkEpoch  {
        _updatePegPrices();
        previousEpochPyreGASPrice = getPyreGASPrice();
        uint256 currentEpoch; 
        currentEpoch = epoch;
        uint256 _decay = _calculateDecayRate(previousEpochPyreGASPrice);
        IBasisAsset(pyreGAS).decay(currentEpoch , _decay, false);
        
        if (peg1AmountLeft == 0) {
            uint256 Peg1Supply = IERC20(peg1).totalSupply();
            uint256 Peg1NewAmountLeft = Peg1Supply.div(100);
            peg1AmountLeft = Peg1NewAmountLeft;
        }
         if (peg2AmountLeft == 0) {
            uint256 Peg2Supply = IERC20(peg2).totalSupply();
            uint256 Peg2NewAmountLeft = Peg2Supply.div(100);
            peg2AmountLeft = Peg2NewAmountLeft;
        }
         if (peg3AmountLeft == 0) {
            uint256 Peg3Supply = IERC20(peg3).totalSupply();
            uint256 Peg3NewAmountLeft = Peg3Supply.div(100);
            peg3AmountLeft = Peg3NewAmountLeft;
        }
        if (iwv != 0x0000000000000000000000000000000000000000) {
            // send PyreGAS to IWV if IWV address is not set to 0
            uint256 incantations = IERC20(pyreGAS).balanceOf(address(this));
            _sendToIWV(incantations);
        } 
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 _amount,
        address _to
    ) external onlyOperator {
       
        _token.safeTransfer(_to, _amount);
    }

    function iwvSetOperator(address _operator) external onlyOperator {
        IIWV(iwv).setOperator(_operator);
    }

    function iwvSetLockUp(uint256 _withdrawLockupEpochs, uint256 _rewardLockupEpochs) external onlyOperator {
        IIWV(iwv).setLockUp(_withdrawLockupEpochs, _rewardLockupEpochs);
    }

    function iwvAllocateIncantations(uint256 amount) external onlyOperator {
        IIWV(iwv).allocateIncantations(amount);
    }

    function iwvGovernanceRecoverUnsupported(
        address _token,
        uint256 _amount,
        address _to
    ) external onlyOperator {
        IIWV(iwv).governanceRecoverUnsupported(_token, _amount, _to);
    }
}