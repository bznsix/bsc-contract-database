    function _generateTicketId(
        uint256 lotteryId,
        uint128 bucketLowerBound
    )
        private
        pure
        returns (uint256)
    {
        // Note: Lottery ID is an incrementing ID starting from 1. It will not overflow here.
        return (lotteryId << 128) + bucketLowerBound;
    }
