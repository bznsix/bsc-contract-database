contract ElephantNFTMinter is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using Address for address;

    uint8 public constant ARB_BALANCED = 0;
    uint8 public constant ARB_BUSD = 1;  
    uint8 public constant ARB_BNB = 2;
    

    uint8 public arbitrationMode = ARB_BUSD;

    
    AddressRegistry private registry;
    
    IUniswapV2Router02 public  collateralRouter;
    IElephantNFT public nft;

    uint256 public deposited;
    uint256 public busd_value_deposited;
    uint256 public txs;

    event UpdateCollateralRouter(address router);
    event UpdateArbMode(uint8 prevMode, uint8 mode);

    //After construction the reserve needs to be added to the whitelist of the treasuries and the backedToken
    constructor (address nftAddress)  Ownable() {

        //init reg
        registry = new AddressRegistry();

        //the collateral router can be upgraded in the future
        collateralRouter = IUniswapV2Router02(registry.routerAddress());

        //setup tokens
        nft = IElephantNFT(nftAddress);
      
    }

    receive() payable external {
        payable(msg.sender).transfer(msg.value);
    }

    //Update the  arbMode
    function updateArbMode(uint8 mode) onlyOwner external {
        require(mode >= 0 && mode <= 2, "Mode must be between 0 and 2");

        emit UpdateArbMode(arbitrationMode, mode);

        arbitrationMode = mode;
    }

    //Core collateral liquidity can move from one contract location to another across major PCS releases
    function updateCollateralRouter(address _router) onlyOwner external {
        require(_router != address(0), "Router must be set");
        collateralRouter = IUniswapV2Router02(_router);

        emit UpdateCollateralRouter(_router);
        
    }

    function buyForTreasury() nonReentrant external payable {
        (address[] memory path,,,) = bestPath(msg.value);

        //buy immediately and send to the treasury
        collateralRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{value:msg.value}(0, path, registry.coreTreasuryAddress(), block.timestamp);

        //stats
        deposited += msg.value;
        busd_value_deposited += estimateWethToCollateral(msg.value); //cheapest way to calculate APR denominator
        txs++;
    }


    function mint(
        address to
    ) nonReentrant external payable {
        (address[] memory path,,,) = bestPath(msg.value);

        require(to != address(0), "valid address required");
        require(msg.value >= nft.price(), "minimum mint price not met");

        //buy immediately and send to the treasury
        collateralRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{value:msg.value}(0, path, registry.coreTreasuryAddress(), block.timestamp);

        //mint 
        nft.safeMint(to);

        //stats
        deposited += msg.value;
        busd_value_deposited += estimateWethToCollateral(msg.value); //cheapest way to calculate APR denominator
        txs++;
        
    }

    

    function bestPath(uint wethAmount) public view returns (address[] memory path, uint directAmount, uint indirectAmount, uint estimateAmount) {
        address[] memory direct = new address[](2);
        direct[0] = collateralRouter.WETH();
        direct[1] = registry.coreAddress();
        uint[] memory directAmounts = collateralRouter.getAmountsOut(wethAmount, direct);
        directAmount = directAmounts[1];

        address[] memory indirect = new address[](3);
        indirect[0] = collateralRouter.WETH();
        indirect[1] = registry.collateralAddress();
        indirect[2] = registry.coreAddress();
        uint[] memory indirectAmounts = collateralRouter.getAmountsOut(wethAmount, indirect);
        indirectAmount = indirectAmounts[2];


        if (arbitrationMode == ARB_BUSD){
            path = indirect;
            estimateAmount = indirectAmount;
        } else if (arbitrationMode == ARB_BNB){
            path = direct;
            estimateAmount = directAmount;
        } else {
            //balanced
            path = (indirectAmount > directAmount) ? indirect : direct;
            estimateAmount = (indirectAmount > directAmount) ? indirectAmount : directAmount;
        }
        
    } 

    // Estimates the amount of  weth tokens getting transfered to USD collateral tokens
    function estimateWethToCollateral(uint wethAmount) private view returns (uint collateralAmount) {
         //Convert from core to WETH using the core's Oracle
        address[] memory path = new address[](2);
        path[0] = collateralRouter.WETH();
        path[1] = address(registry.collateralAddress());

        uint[] memory amounts = collateralRouter.getAmountsOut(wethAmount, path);
    
        collateralAmount = amounts[1];
    }




}


