pragma solidity 0.8.17;


interface IAprForwardingTreasuryStrategy {

    function dailyEstimate() external view returns (uint coreAmount, uint collateralAmount);

}

contract BulkNFTMinter is Ownable, ReentrancyGuard {

    ElephantNFTMinter public minter;
    IAprForwardingTreasuryStrategy public aprForward;
    IElephantNFT public nft;


    event UpdateMinter(address oldMinter, address newMinter);
    event UpdateForward(address oldForward, address newForward);
    event UpdateNFT(address oldNFT, address newNFT);

    event DailyEstimate(uint coreAmount, uint collateralAmount);
    event MinterValueDeposited(uint collateralAmount);
    event BulkMintRefund(uint amount);
    event BulkMints(uint amount);

    receive() payable external {
        payable(msg.sender).transfer(msg.value);
    }

    function updateMinter(address _minter) onlyOwner external {
        require(_minter != address(0), "zero address");

        emit UpdateMinter(address(minter), _minter);

        minter = ElephantNFTMinter(payable(_minter));
    }

    function updateForward(address _forward) onlyOwner external {
        require(_forward != address(0), "zero address");

        emit UpdateForward(address(aprForward), _forward);

        aprForward = IAprForwardingTreasuryStrategy(_forward);

    }

    function updateNFT(address _nft) onlyOwner external {
        require(_nft != address(0), "zero address");

        emit UpdateNFT(address(nft), _nft);

        nft = IElephantNFT(_nft);

    }


    function bulkMint(address to, uint count) nonReentrant external payable returns (uint minted) {

        uint balance = msg.value;
        uint price = nft.price(); 

        require(address(nft) != address(0), "nft not set");
        require(address(aprForward) != address(0), "aprForward not set");
        require(address(minter) != address(0), "minter not set");

        require(balance >= price, "balance required for one or more mints");
        require(count >= 1, "count must be 1 or more");

        for (uint i=0; i < count; i++) {
            
            price = nft.price();

            if (balance >= price){

               balance -= price;       
               minter.mint{value: price}(to);

               minted++;
            } else {
                break;
            }

        }

        //return any unused balance; this can happen when we jump to the next round
        if (balance > 0) {
            payable(msg.sender).transfer(balance);
            emit BulkMintRefund(balance);
        }

        //emit this so we can calculate APR
        if (minted > 0){

            (uint coreAmount, uint collateralAmount) = aprForward.dailyEstimate();

            emit DailyEstimate(coreAmount, collateralAmount);
            emit MinterValueDeposited(minter.busd_value_deposited());
            emit BulkMints(minted);
        }

    }


}