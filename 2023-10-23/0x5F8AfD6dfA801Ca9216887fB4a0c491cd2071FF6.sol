pragma solidity ^0.8.9;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {TransferHelper} from "../libraries/TransferHelper.sol";


abstract contract PepaTransferRouter {
    address public constant NO_FEE_WALLET =
        0x4dcc41E99b56570BC96D4a449E75f5b664245Ba7;
    address public constant PEPA = 0xC3137c696796D69F783CD0Be4aB4bB96814234Aa;
    address public constant WETH = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;

    uint private _feesBPS;
    uint private constant _FEE_NOT_ENTERED = 100_01;

    constructor() {
        _feesBPS = _FEE_NOT_ENTERED;
    }

    modifier lockFeesAndGuardReenter() {
        require(_feesBPS == _FEE_NOT_ENTERED, "ReentrancyGuard: reentrant call");
        _feesBPS = _getFeesBPSForUser(msg.sender);
        _;
        _feesBPS = _FEE_NOT_ENTERED;
    }

    function _safeTransferPepaWithUserFees(
        address from,
        address to,
        uint amount
    ) internal {
        TransferHelper.safeTransferFrom(PEPA, from, NO_FEE_WALLET, amount);
        _forwardPepaFromFeelessWithUserFees(to, amount);
    }

    function _safeTransferFrom(
        address token,
        address from,
        address to,
        uint amount
    ) internal {
        if (token == PEPA) {
            _safeTransferPepaWithUserFees(from, to, amount);
        } else {
            TransferHelper.safeTransferFrom(token, from, to, amount);
        }
    }

    function _forwardPepaFromFeelessWithUserFees(address to, uint amount) internal {
        uint fees = amount * _feesBPS / 100_00;
        _handleFees(fees);
        TransferHelper.safeTransferFrom(PEPA, NO_FEE_WALLET, to, amount - fees);
    }

    function _getFeesBPSForUser(address user) internal virtual view returns (uint);
    function _handleFees(uint amount) internal virtual;
}
