contract StakingContract is Ownable {
    using SafeMath for uint256;

    IERC20 public token; // The ERC20 token being staked
    uint256 public scalingFactor; 

    struct Stake {
        uint256 amount;
        uint256 startTime;
        uint256 lastRewardBlock; // Track the last block when rewards were calculated
        uint256 lastRewardTime;
    }

    uint256 public rewardRate = 7; // Daily reward rate in percentage (5%)
    uint256 public stakingDuration = 0 days; // Staking duration in seconds (24 hours)

    mapping(address => Stake) public stakes;
    mapping(address => uint256) public rewards;
    mapping(address => uint256) public accruedRewards;

    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(address indexed user, uint256 reward);
    event RewardRateSet(uint256 newRate);
    event StakingDurationSet(uint256 newDuration);

    constructor(address _token) {
        token = IERC20(_token);
        uint256 tokenDecimals = 9;
        scalingFactor = 10 ** tokenDecimals; // Calculate scaling factor
    }

    function setRewardRate(uint256 _rate) external onlyOwner {
        rewardRate = _rate;
        emit RewardRateSet(_rate);
    }

    function setStakingDuration(uint256 _duration) external onlyOwner {
        stakingDuration = _duration;
        emit StakingDurationSet(_duration);
    }

    function stake(uint256 amount) external {
        require(amount > 0, "Amount must be greater than 0");

        Stake storage userStake = stakes[msg.sender];

        if (userStake.amount == 0) {
            // This is the user's initial stake
            userStake.startTime = block.timestamp;
            userStake.lastRewardBlock = block.number;
            userStake.lastRewardTime = block.timestamp; // Set lastRewardTime
        } else {
            // Calculate and pay pending rewards before adding to the stake
            uint256 pendingReward = calculatePendingReward(msg.sender);
            if (pendingReward > 0) {
                rewards[msg.sender] = rewards[msg.sender].add(pendingReward);
                emit RewardPaid(msg.sender, pendingReward);
            }
        }

        // Transfer the staked tokens and update the stake information
        uint256 scaledAmount = amount.mul(scalingFactor); // Scale the amount
        require(token.transferFrom(msg.sender, address(this), scaledAmount), "Token transfer failed");
        userStake.amount = userStake.amount.add(scaledAmount); // Store the scaled amount

        emit Staked(msg.sender, scaledAmount);
    }

    function withdraw() external {
        Stake storage userStake = stakes[msg.sender];
        require(userStake.amount > 0, "No stake to withdraw");

        uint256 pendingReward = calculatePendingReward(msg.sender);

        // Calculate the total amount to be transferred
        uint256 totalAmount = userStake.amount.add(pendingReward);

        // Ensure that the staking duration has been met
        if (block.timestamp >= userStake.startTime.add(stakingDuration)) {
            // Update user's stake information and remove their stake
            delete stakes[msg.sender];

            // Transfer the staked tokens and rewards
            token.transfer(msg.sender, totalAmount);

            emit Withdrawn(msg.sender, userStake.amount);
            emit RewardPaid(msg.sender, pendingReward);
        }

        accruedRewards[msg.sender] = accruedRewards[msg.sender].add(pendingReward);
    }

    function claim() external {
        uint256 pendingReward = calculatePendingReward(msg.sender);
        require(pendingReward > 0, "No reward to claim");

        // Transfer the pending rewards to the staker
        token.transfer(msg.sender, pendingReward);

        // Update rewards mapping
        rewards[msg.sender] = rewards[msg.sender].add(pendingReward);

        // Reset the pending reward to 0 and update the last reward time
        stakes[msg.sender].lastRewardTime = block.timestamp;
        stakes[msg.sender].lastRewardBlock = block.number;

        accruedRewards[msg.sender] = accruedRewards[msg.sender].add(pendingReward);

        emit RewardPaid(msg.sender, pendingReward);
    }

    function calculatePendingReward(address _address) internal view returns (uint256) {
        Stake storage userStake = stakes[_address];
        if (userStake.amount == 0) {
            return 0;
        }

        // Calculate the number of reward seconds since the last calculation
        uint256 currentTime = block.timestamp;
        uint256 rewardSeconds = currentTime.sub(userStake.lastRewardTime);

        // Calculate the reward for each reward second
        uint256 dailyReward = userStake.amount.mul(rewardRate).div(100);
        uint256 pendingReward = dailyReward.mul(rewardSeconds).div(86400); // 86400 seconds in a day

        return pendingReward;
    }

    function getPendingReward(address _address) external view returns (uint256) {
        return calculatePendingReward(_address);
    }

    function getClaimedRewards(address _address) external view returns (uint256) {
        return rewards[_address];
    }
}