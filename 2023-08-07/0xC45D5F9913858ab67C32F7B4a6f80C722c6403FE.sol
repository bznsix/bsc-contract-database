}

contract STAR is ERC20, Ownable {
    using SafeMath for uint256;

    IUniswapV2Router02 public uniswapV2Router;
    address public  uniswapPair;
    
    uint256 public sellNodeFee = 4;
    uint256 public sellDestroyFee = 4;

    address public nodeFeeAddress = 0x25a908CF5429ae7cb93683463dDC4042c873632F;
    address public usdt = 0x55d398326f99059fF775485246999027B3197955;
    address public uniswapRouter = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
    // BSC-TEST
    //address public nodeFeeAddress = 0x5858F6d09cD3cDcb25f32254FDEB8073D5E20E2e;
    //address public usdt = 0xa4B775D8f23411ECB961ebD841fCA7DB8aE9A8fF;
    //address public uniswapRouter = 0x6edA5EE04A4b3960B84620c25F4979D0e41a487A;
    
    address public dead = 0x000000000000000000000000000000000000dEaD;

    uint256 public _maxTotalSupply = 1000000 * 10 ** 18;
    uint256 public _initSupply = 10000 * 10 ** 18;
    uint256 public _hasMinedSupply = _initSupply;

    bool public allowAnyAddressSwap = false;

    mapping(address => bool) private whiteList;

    event SetWhiteAddress(address indexed account, bool included);
    event BatchSetWhiteAddress(address[] accounts, bool included);
    event Mint(address indexed account, uint256 amount);
    event SetAllowAnyAddressSwap();
    event SetNodeFeeAddress(address indexed account);
    event SetSellFee(uint256 nodeFee, uint256 destroyFee);

    constructor(
    ) ERC20("STAR Token", "STAR" , 18)  {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(uniswapRouter);
        address _uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory())
        .createPair(address(this), usdt);
        uniswapV2Router = _uniswapV2Router;
        uniswapPair = _uniswapV2Pair;

        setWhiteAddress(owner(), true);
        setWhiteAddress(nodeFeeAddress, true);
        setWhiteAddress(address(this), true);

        _mint(owner(), _initSupply);
    }
    receive() external payable {}

    function mint(address account, uint256 amount) public onlyOwner {
        _mint(account, amount * (10 ** decimals()));
        _hasMinedSupply.add(amount * (10 ** decimals()));
        require(totalSupply() <= _maxTotalSupply, "totalSupply can not over _maxTotalSupply");
        emit Mint(account, amount * (10 ** decimals()));
    }

    function setAllowAnyAddressSwap() public onlyOwner {
        require(!allowAnyAddressSwap, "Have Allowed any address swap");
        allowAnyAddressSwap = true;
        emit SetAllowAnyAddressSwap();
    }

    function setWhiteAddress(address account, bool included) public onlyOwner {
        if (whiteList[account] != included) {
            whiteList[account] = included;
            emit SetWhiteAddress(account, included);
        }
    }

    function batchSetWhiteAddress(address[] calldata accounts, bool included) public onlyOwner {
        for (uint256 i = 0; i < accounts.length; i++) {
            whiteList[accounts[i]] = included;
        }

        emit BatchSetWhiteAddress(accounts, included);
    }

    function setNodeFeeAddress(address payable account) external onlyOwner{
        nodeFeeAddress = account;
        whiteList[nodeFeeAddress] = true;
        emit SetNodeFeeAddress(account);
    }

    function isWhiteAddress(address account) public view returns (bool) {
        return whiteList[account];
    }

    function setSellFee(uint256 nodeFee, uint256 destroyFee) external onlyOwner {
        require(nodeFee.add(destroyFee) <= 10, "Total sell fee is over 10%");
        sellNodeFee = nodeFee;
        sellDestroyFee = destroyFee;

        emit SetSellFee(nodeFee, destroyFee);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override {
        uint256 nodeFee;
        uint256 destroyFee;

        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");
        if (amount == 0) {
            super._transfer(from, to, 0);
            return;
        }

        if (to == uniswapPair || from == uniswapPair){
            if (!whiteList[from] && !whiteList[to]){
                require(allowAnyAddressSwap, "Forbidden: Only white address swap");
            }
        }

        if (to == uniswapPair){
            /*first addLiquidity*/
            (uint r0,uint256 r1,) = IUniswapV2Pair(uniswapPair).getReserves();
            if (r0 <= 0) {
                require(from == owner(), "Forbidden: Only owner can add liquidity first.");

                super._transfer(from, to, amount);
                return;
            }

            nodeFee = amount.mul(sellNodeFee).div(100);
            destroyFee = amount.mul(sellDestroyFee).div(100);
            amount = amount.sub(nodeFee).sub(destroyFee);

            if(nodeFee > 0) super._transfer(from, nodeFeeAddress, nodeFee);
            if(destroyFee > 0) super._transfer(from, dead, destroyFee);
        }

        super._transfer(from, to, amount);
    }
}