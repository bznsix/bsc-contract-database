contract XBNBToken is IERC20, Ownable {
    using SafeMath for uint256;

    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;
    uint256 private _totalSupply;

    string private _name;
    string private _symbol;
    uint8 private _decimals;

    uint256 private _feeRate = 60;
    uint256 private _marketFeeRate = 10;
    uint256 public constant PRECISION = 1000;
    
    mapping(address => bool) private _isExcludedFromFee;
    
    address private _pswap;
    
    bool private _allowEx;
    
    address private _market;
    
    uint256 private _exchangeLimitTime;
    
    uint256 private _exchangeLimit;
    
    address private _router;

    uint256 private _minTotalAmount;

    constructor(address router_, address market_, uint256 exchangeLimitTime_, uint256 exchangeLimit_) public {
        _name = "X Factor BNB";
        _symbol = "XBNB";
        _decimals = 18;
        _market = market_;
        _mint(_msgSender(), 20 * 10**(uint256(_decimals) + 5));

        
        _router = router_;
        IUniswapRouter02 router = IUniswapRouter02(router_);
        _pswap = IUniswapFactory(router.factory()).createPair(
            address(this),
            router.WETH()
        );
        _minTotalAmount = 200000 * 10**(uint256(_decimals));
        _allowEx = false;
        _exchangeLimitTime = exchangeLimitTime_;
        _exchangeLimit = exchangeLimit_;
        addExcludedFromFee(owner());
    }

    function name() public view virtual returns (string memory) {
        return _name;
    }

    function symbol() public view virtual returns (string memory) {
        return _symbol;
    }

    function decimals() public view virtual returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view virtual override returns (uint256) {
        return _totalSupply;
    }

    function exStatus() public view returns (bool) {
        return _allowEx;
    }

    function pswap() public view returns (address) {
        return _pswap;
    }

    function balanceOf(address account)
        public
        view
        virtual
        override
        returns (uint256)
    {
        return _balances[account];
    }

    function _mint(address account, uint256 amount) internal virtual {
        require(account != address(0), "ERC20: mint to the zero address");

        _totalSupply = _totalSupply.add(amount);
        _balances[account] = _balances[account].add(amount);
        emit Transfer(address(0), account, amount);
    }

    function allowance(address owner, address spender)
        public
        view
        virtual
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function approve(address spender, uint256 amount)
        public
        virtual
        override
        returns (bool)
    {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function isExcludedFromFee(address who) public view returns (bool) {
        return _isExcludedFromFee[who];
    }

    function feeRate() public view returns (uint256) {
        return _feeRate;
    }

    function setFeeRate(uint256 feeRate_) public onlyOwner {
        _feeRate = feeRate_;
    }

    function marketFeeRate() public view returns (uint256) {
        return _marketFeeRate;
    }

    function setMarketFeeRate(uint256 marketFeeRate_) public onlyOwner {
        _marketFeeRate = marketFeeRate_;
    }
    
    function addExcludedFromFee(address who) public onlyOwner {
        _isExcludedFromFee[who] = true;
    }

    function rmExcludedFromFee(address who) public onlyOwner {
        _isExcludedFromFee[who] = false;
    }

    function allowEx() public onlyOwner {
        _allowEx = true;
    }

    function setPswap(address pswap_) public onlyOwner {
        _pswap = pswap_;
    }

    function _checkFee(address sender, address recipient)
        private
        view
        returns (bool)
    {
        if (
            _isExcludedFromFee[sender] ||
            _isExcludedFromFee[recipient] ||
            _feeRate == 0
        ) {
            return false;
        }
        if (sender == _pswap || recipient == _pswap) {
            require(_allowEx, "BToken: now allow ex");
            return true;
        } else {
            return false;
        }
    }

    function _cvtAmountToValue(uint256 amount) private view returns (uint256) {
        return IUniswapRouter02(_router).getAmountOut(amount, _balances[_pswap], IERC20(IUniswapRouter01(_router).WETH()).balanceOf(_pswap));
    }

    function cvtAmountToValue(uint256 amount) public view returns (uint256) {
        return _cvtAmountToValue(amount);
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) private {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");

        if (_checkFee(sender, recipient) && _totalSupply > _minTotalAmount) {
            if (block.timestamp <= _exchangeLimitTime) {
                require(_cvtAmountToValue(amount) <= _exchangeLimit, "XBNBToken: limit exchange"); 
            }
            uint256 fee = amount.mul(_feeRate).div(PRECISION);
            uint256 marketFee = amount.mul(_marketFeeRate).div(PRECISION);
            uint256 tmp = fee.sub(marketFee);
            if (_totalSupply.sub(tmp) < _minTotalAmount) {
                tmp = _totalSupply.sub(_minTotalAmount);
                fee = tmp.add(marketFee);
            }
            uint256 revAmount = amount.sub(fee);
            _balances[sender] = _balances[sender].sub(
                amount,
                "ERC20: transfer amount exceeds balance"
            );
            _balances[recipient] = _balances[recipient].add(revAmount);
            
            _totalSupply = _totalSupply.sub(tmp);
            _balances[_market] = _balances[_market].add(marketFee);
            emit Transfer(sender, recipient, revAmount); 
            emit Transfer(sender, address(0), tmp);
            emit Transfer(sender, _market, marketFee);
        
        } else {
            _balances[sender] = _balances[sender].sub(
                amount,
                "ERC20: transfer amount exceeds balance"
            );
            _balances[recipient] = _balances[recipient].add(amount);
            emit Transfer(sender, recipient, amount);
        }
    }

    function transfer(address recipient, uint256 amount)
        public
        virtual
        override
        returns (bool)
    {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public virtual override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(
            sender,
            _msgSender(),
            _allowances[sender][_msgSender()].sub(
                amount,
                "ERC20: transfer amount exceeds allowance"
            )
        );
        return true;
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }

    function market() public view returns (address) {
        return _market;
    }

    function setMarket(address market_) public onlyOwner {
        _market = market_;
    }

    function exchangeLimitTime() public view returns(uint256) {
        return _exchangeLimitTime;
    }

    function setExchangeLimitTime(uint256 exchangeLimitTime_) public onlyOwner () {
        _exchangeLimitTime = exchangeLimitTime_;
    }

    function exchangeLimit() public view returns(uint256) {
        return _exchangeLimit;
    }

    function setExchangeLimit(uint256 exchangeLimit_) public onlyOwner () {
        _exchangeLimit = exchangeLimit_;
    }

    function minTotalAmount() public view returns(uint256) {
        return _minTotalAmount;
    }

    function setMinTotalAmount(uint256 minTotalAmount_) public onlyOwner {
        _minTotalAmount = minTotalAmount_;
    }

}