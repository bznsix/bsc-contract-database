import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AutomationCompatibleInterface.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

error Withdraw__TransferFailed();
error Staking__TransferFailed();

contract TRUSTAI_STAKING is ReentrancyGuard, Ownable, AutomationCompatibleInterface {
    IERC20 public s_stakingToken;
    IERC20 public s_rewardToken;
    address public treasuryWallet;
    uint256 interval;
    uint256 lastTimeStamp;
    mapping(address => bool) public userIndices;
    address[] public users;


    /**
     * @notice Structure to store staker information
     */
    struct Staker {
        // The deposited tokens of the Staker
        uint256 deposited;
        // Last time of details update for Deposit
        uint256 timeOfLastUpdate;
        // Calculated, but unclaimed rewards. These are calculated each time
        // a user writes to the contract.
        uint256 unclaimedRewards;
    }

    // Rewards per hour. A fraction calculated as x/10,000,000 to get the percentage
    uint256 public rewardsPerHour = 500; // 0.00285% per hour or 25% APR

    // Minimum amount to stake
    uint256 public minStake = 1 * 10**18;

    /**
     * @notice Mapping of address to Staker info
     */
    mapping(address => Staker) internal stakers;

    /**
     * @notice Contract constructor
     * @param stakingToken The address of the staking token
     * @param rewardToken The address of the reward token
     * @param _treasuryWallet The address of the treasury wallet
     */
    constructor(address stakingToken, address rewardToken, address _treasuryWallet) {
        s_stakingToken = IERC20(stakingToken);
        s_rewardToken = IERC20(rewardToken);
        treasuryWallet = _treasuryWallet;
    }

    /**
     * @notice Deposit tokens into the staking contract
     * @param _amount The amount of tokens to deposit
     */
    function deposit(uint256 _amount) external nonReentrant {
        if (!userIndices[msg.sender]) {
            userIndices[msg.sender] = true;
            users.push(msg.sender);
        }
        require(_amount >= minStake, "Amount smaller than minimum deposit");
        require(
            s_stakingToken.balanceOf(msg.sender) >= _amount,
            "Can't stake more than you own"
        );
        if (stakers[msg.sender].deposited == 0) {
            stakers[msg.sender].deposited = _amount;
            stakers[msg.sender].timeOfLastUpdate = block.timestamp;
            stakers[msg.sender].unclaimedRewards = 0;
        } else {
            uint256 rewards = calculateRewards(msg.sender);
            stakers[msg.sender].unclaimedRewards += rewards;
            stakers[msg.sender].deposited += _amount;
            stakers[msg.sender].timeOfLastUpdate = block.timestamp;
        }
        bool success = s_rewardToken.transferFrom(
            msg.sender,
            address(this),
            _amount
        );
        if (!success) {
            revert Staking__TransferFailed();
        }
    }

    /**
     * @notice Compound the rewards and reset the last time of update for Deposit info
     */
    function stakeRewards() external nonReentrant {
        require(stakers[msg.sender].deposited > 0, "You have no deposit");
        uint256 rewards = calculateRewards(msg.sender) + stakers[msg.sender].unclaimedRewards;
        stakers[msg.sender].unclaimedRewards = 0;
        stakers[msg.sender].deposited += rewards;
        stakers[msg.sender].timeOfLastUpdate = block.timestamp;
    }

    /**
     * @notice Mint rewards for the staker
     */
    function claimRewards() external nonReentrant {
        uint256 rewards = calculateRewards(msg.sender) + stakers[msg.sender].unclaimedRewards;
        require(rewards > 0, "You have no rewards");
        stakers[msg.sender].unclaimedRewards = 0;
        stakers[msg.sender].timeOfLastUpdate = block.timestamp;
        _mintRewards(msg.sender, rewards);
    }

    /**
     * @notice Withdraw specified amount of staked tokens
     * @param _amount The amount of tokens to withdraw
     */
    function withdraw(uint256 _amount) external nonReentrant {
        require(
            stakers[msg.sender].deposited >= _amount,
            "Can't withdraw more than you have"
        );
        uint256 _rewards = calculateRewards(msg.sender);
        stakers[msg.sender].deposited -= _amount;
        stakers[msg.sender].timeOfLastUpdate = block.timestamp;
        stakers[msg.sender].unclaimedRewards = _rewards;
        bool success = s_stakingToken.transfer(msg.sender, _amount);
        if (!success) {
            revert Withdraw__TransferFailed();
        }
    }

    /**
     * @notice Mint/Transfer ERC20 rewards to the staker
     * @param _staker The address of the staker
     * @param _rewards The amount of rewards to mint/transfer
     */
    function _mintRewards(address _staker, uint256 _rewards) internal {
        bool success = s_rewardToken.transferFrom(treasuryWallet, _staker, _rewards);
        if (!success) {
            revert Staking__TransferFailed();
        }
    }

    /**
     * @notice Update the treasuryWallet address
     * @param _newTreasuryWallet The new treasury wallet address
     */
    function setTreasuryWallet(address _newTreasuryWallet) external onlyOwner {
        require(_newTreasuryWallet != address(0), "Invalid treasury wallet address");
        treasuryWallet = _newTreasuryWallet;
    }

    /**
     * @notice Get user deposit and rewards by address
     * @param _user The address of the user
     * @return _stake The user's stake amount
     * @return _rewards The user's rewards amount
     */
    function getDepositInfo(address _user)
        public
        view
        returns (uint256 _stake, uint256 _rewards)
    {
        _stake = stakers[_user].deposited;
        _rewards = calculateRewards(_user) + stakers[msg.sender].unclaimedRewards;
        return (_stake, _rewards);
    }

    /**
     * @notice Calculate the rewards since the last update on Deposit info
     * @param _staker The address of the staker
     * @return rewards The calculated rewards
     */
    function calculateRewards(address _staker)
        internal
        view
        returns (uint256 rewards)
    {
        return (((((block.timestamp - stakers[_staker].timeOfLastUpdate) *
            stakers[_staker].deposited) * rewardsPerHour) / 3600) / 10000000);
    }

    /**
     * @notice Distribute rewards to all users
     */
    function distributeRewardsToAll() public {
        for (uint256 i = 0; i < users.length; i++) {
            address user = users[i];
            uint256 rewards = calculateRewards(user) + stakers[user].unclaimedRewards;
            if (rewards > 0) {
                stakers[user].unclaimedRewards = 0;
                stakers[user].timeOfLastUpdate = block.timestamp;
                 _mintRewards(msg.sender, rewards);
            }
        }
    }

    /**
     * @notice Change the automated update interval
     * @param newInterval The new interval (in seconds) for automated updates
     */
    function changeInterval(uint256 newInterval) public onlyOwner {
        interval = newInterval;
    }

    /**
     * @notice Check if automated upkeep is needed
     * @return upkeepNeeded True if upkeep is needed, false otherwise
     */
    function checkUpkeep(bytes calldata /* checkData */) external view returns (bool upkeepNeeded, bytes memory /* performData */) {
        upkeepNeeded = (block.timestamp - lastTimeStamp) > interval;
    }

    /**
     * @notice Perform automated upkeep to update NFTs
     */
    function performUpkeep(bytes calldata /* performData */) external {
        // Revalidate the upkeep
        if ((block.timestamp - lastTimeStamp) > interval) {
            lastTimeStamp = block.timestamp;
            distributeRewardsToAll();
        }
    }
}
