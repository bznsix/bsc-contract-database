        @dev  Caller must be Owner

        @param	token_              Address of token contract (Native Coin = 0x00)
        @param	amount_             Amount of token to be withdrawn
        Note: 
        - This function allows `gnosis wallet` can withdraw any tokens that mistakenly sent to this contract
        - Two types of token can be withdrawed: Native Coin, and ERC-20
    */
    function emergency(address token_, uint256 amount_) external onlyOwner {
        address _receiver = owner();
        if (token_ == address(0)) Address.sendValue(payable(_receiver), amount_);
        else IERC20(token_).safeTransfer(_receiver, amount_);
    }

    function _getPool(address poolAddress_) private view returns(ISmartFarming.PoolSchedule memory){
        return ISmartFarming(poolAddress_).getPoolSchedule();
    }

    function getPoolByIndex(uint256 index_) public view returns(ISmartFarming.PoolSchedule memory){
        require(poolList[index_] != address(0x0), "Not a valid pool ID");
        return ISmartFarming(poolList[index_]).getPoolSchedule();
    }

    function getPoolAddress(uint256 index_) public view returns(address){
        return poolList[index_];
    }

    function getRewardToken(uint256 index_) external view returns (address){
        return ISmartFarming(poolList[index_]).getRewardToken();
    }
    function getDepositToken(uint256 index_) external view returns (address){
        return ISmartFarming(poolList[index_]).getDepositToken();
    }

    function getAllPools() public view returns(ISmartFarming.PoolSchedule[] memory, uint256[] memory, address[] memory ){
        ISmartFarming.PoolSchedule[] memory pools = new ISmartFarming.PoolSchedule[](poolList.length);
        uint256[] memory ids = new uint[](poolList.length);
        
        uint256 i;
        for(i = 0; i < poolList.length; i++){
            pools[i] = _getPool(poolList[i]);
            ids[i] = i;
        }

        return (pools, ids, poolList);
    }

    function createPool(address owner_, address tokenDeposit_, address tokenReward_, ISmartFarming.PoolSchedule memory poolData_, ISmartFarming.RewardPerRound[] memory _rewardRoundList, bytes memory bytecode) external whenNotPaused onlyOwner{
        
        address _authorizer = address(this);
        bytes memory _byteCode = getBytecode(owner_, _authorizer, tokenDeposit_, tokenReward_, poolData_, _rewardRoundList, bytecode);
        // uint256 _salt = poolList.length;
        uint256 _salt = block.timestamp;
        address addr;
        
        assembly {
            addr := create2(
                callvalue(), // wei sent with current call
                // Actual code starts after skipping the first 32 bytes
                add(_byteCode, 0x20),
                mload(_byteCode), // Load the size of code contained in the first 32 bytes
                _salt // Salt from function arguments
            )

            if iszero(extcodesize(addr)) {
                revert(0, 0)
            }
        }

        poolList.push(addr);

        emit PoolDeployed(addr);

    }

    function getBytecode(address owner_, address authorizer_, address tokenDeposit_, address tokenReward_, ISmartFarming.PoolSchedule memory poolSchedule_, ISmartFarming.RewardPerRound[] memory rewardPerRoundList_, bytes memory bytecode) private pure returns (bytes memory) {
        return abi.encodePacked(bytecode, abi.encode(owner_, authorizer_, tokenDeposit_, tokenReward_, poolSchedule_, rewardPerRoundList_));
    }
