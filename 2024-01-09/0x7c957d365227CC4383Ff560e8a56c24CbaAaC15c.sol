import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract DepositStables is Ownable, Pausable, VispxNftVerify, ReentrancyGuard{
    using SafeERC20 for IERC20;

    address[] private poolList;

    address private signer;

    bool public isRequiredNFT = false; 

    /**
     * @dev Emitted when Deposit function successfully executes
     */
    event Deposited(
        uint256 poolID, 
        address poolAddr,
        address token,
        address user,
        uint256 amount
    );

    /**
     * @dev Emitted when emergency function successfully executes
     */
    event PoolDeployed (
        address poolAddress
    );

    /**
     * @dev Emitted when emergency function successfully executes
     */
    event Emergency(
        address token,
        address toWallet,
        uint256 amount
    );

    /**
     * @dev Emitted when new signer change or added
     */
    event SingerAdded (
        address oldSigner,
        address newSigner
    );
    
    modifier nftNotRequired(){
        require(!isRequiredNFT, "NFT is required");
        _;
    }

    constructor(
        address gnosisVault_,
        address signer_
    ) {
        require(
            gnosisVault_ != address(0) && signer_ != address(0),
            "Null address passing"
        );
        signer = signer_;
        
        // All funding to vault
        _transferOwnership(gnosisVault_);
    }

    function setSigner(address newSigner_) external onlyOwner{
        require(newSigner_ != address(0x0), "null address");

        signer = newSigner_;

        emit SingerAdded(signer, newSigner_);
    }

    function enableNftVerify() external onlyOwner{
        require(isRequiredNFT == false, "Must be  false to enable");

        isRequiredNFT = true;
    }


    function disableNftVerify() external onlyOwner{
        require(isRequiredNFT == true, "Must be true to disable");

        isRequiredNFT = false;
    }


    function getSigner() external view returns (address) {
        return signer;
    }
    

    function getVault() public view returns (address){
        return owner();
    }

    // disable deposit function
    function pause() external onlyOwner() {
        _pause();
    }

    // enable deposit function
    function unpause() external onlyOwner() {
        _unpause();
    }

    /**
        @notice deposit amount of the stable token
        @dev  Caller can be ANY

        @param	stableToken_            address of stable token could be USDT, USDC, FUSD ...
        @param  amount_                 amount of stable coin to be deposited
        @param  poolID_                 to chosen pool 

    */
    function _deposit(address stableToken_, uint256 amount_, uint256 poolID_) private {
        
        address caller = msg.sender;

        // Get pool and  check if pool avaiable
        address _poolAddress = poolList[poolID_];

        require(_poolAddress != address(0x0), "Pool not exsisted");

        ISmartFarming.PoolSchedule memory poolSchedule = _getPool(_poolAddress);

        require(block.timestamp < poolSchedule.start, "Farming started");

        require(poolSchedule.initialized, "This pool is not initialized");

        require(!poolSchedule.revoked, "This pool is cancelled");

        require(!ISmartFarming(_poolAddress).checkIfPoolStarted(), "Claimming has started");

        require(ISmartFarming(_poolAddress).getDepositToken() == stableToken_, "Invalid Token passed");

        // send deposit info to pool
        ISmartFarming(_poolAddress).addUserFarming(caller, amount_);

        IERC20(stableToken_).safeTransferFrom(caller, getVault(), amount_);

        emit Deposited(poolID_, _poolAddress, stableToken_, caller, amount_);
    }

    function deposit(address stableToken_, uint256 amount_, uint256 poolID_) external whenNotPaused nftNotRequired nonReentrant {
        _deposit(stableToken_, amount_, poolID_);
    }

    function depositWithVerify(address stableToken_, uint256 amount_, uint256 poolID_, uint128 validTime_, bytes memory signature)
    external whenNotPaused nonReentrant {
        require(verify(msg.sender, validTime_, signer, signature), "Invalid verification");
        _deposit(stableToken_, amount_, poolID_);
    }

