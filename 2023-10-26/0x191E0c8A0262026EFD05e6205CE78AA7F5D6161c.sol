pragma solidity ^0.8.14;

import {ISuperfluid, ISuperToken, SuperAppDefinitions} from "@streamable-finance/ethereum-contracts/contracts/interfaces/superfluid/ISuperfluid.sol";
import {SuperAppBase} from "@streamable-finance/ethereum-contracts/contracts/apps/SuperAppBase.sol";
import {IConstantFlowAgreementV1} from "@streamable-finance/ethereum-contracts/contracts/interfaces/agreements/IConstantFlowAgreementV1.sol";
import {CFAv1Library} from "@streamable-finance/ethereum-contracts/contracts/apps/CFAv1Library.sol";

import {AutomateTaskCreator} from "./gelato/AutomateTaskCreator.sol";
import {Module, ModuleData} from "./gelato/Types.sol";
import {IFlowSchedulerAutomation} from "./interfaces/IFlowSchedulerAutomation.sol";
import {IFlowScheduler} from "./interfaces/IFlowScheduler.sol";
import {FlowScheduler} from "./FlowScheduler.sol";

/**
 * @title Flow scheduler Automation contract
 * @author StreamPay
*  @author SuperFluid
 */
contract FlowSchedulerAutomation is
    IFlowSchedulerAutomation,
    FlowScheduler,
    AutomateTaskCreator,
    SuperAppBase
{
    /* ========== LIBRARIES ========== */

    using CFAv1Library for CFAv1Library.InitData;

    /* ========== STATE VARIABLES ========== */

    mapping(bytes32 => TaskIds) public taskIds; // id = keccak(supertoken, sender, receiver)
    uint256 public singleTaskFee;

    /* ========== CONSTRUCTOR ========== */

    constructor(
        address payable _automate,
        address _fundsOwner,
        uint256 _fee,
        ISuperfluid _host,
        string memory _registrationKey
    )
        payable
        FlowScheduler(_host)
        AutomateTaskCreator(_automate, _fundsOwner)
        nonZeroAddress(_fundsOwner)
    {
        singleTaskFee = _fee;

        // super app registration. This is a dumb superApp, only for frontend batching calls.
        uint256 configWord = SuperAppDefinitions.APP_LEVEL_FINAL |
            SuperAppDefinitions.BEFORE_AGREEMENT_CREATED_NOOP |
            SuperAppDefinitions.AFTER_AGREEMENT_CREATED_NOOP |
            SuperAppDefinitions.BEFORE_AGREEMENT_UPDATED_NOOP |
            SuperAppDefinitions.AFTER_AGREEMENT_UPDATED_NOOP |
            SuperAppDefinitions.BEFORE_AGREEMENT_TERMINATED_NOOP |
            SuperAppDefinitions.AFTER_AGREEMENT_TERMINATED_NOOP;
        _host.registerAppWithKey(configWord, _registrationKey);

        emit Initialized();

        // On deployment, send native asset to this contract for gelato gas payments (optional)
        if (msg.value > 0) emit FundsReceived(msg.sender, msg.value);
    }

    /* ========== MODIFIERS ========== */

    modifier onlyFundsOwner() {
        if (msg.sender != fundsOwner) revert NotFundsOwner();
        _;
    }
    modifier nonZeroAddress(address _addr) {
        if (_addr == address(0)) revert ZeroAddressProvided();
        _;
    }
    modifier nonZeroVariable(uint256 _var) {
        if (_var == 0) revert ZeroVariableProvided();
        _;
    }

    /* ========== EXTERNAL FUNCTIONS ========== */

    /// @notice This function will receive native asset for gelato gas payments
    receive() external payable {
        emit FundsReceived(msg.sender, msg.value);
    }

    /* ========== EXTERNAL FUNCTIONS CALLED BY OWNER ========== */

    /// @dev IFlowSchedulerAutomation.withdraw implementation
    function withdraw(uint256 amount) external onlyFundsOwner {
        if (amount > address(this).balance) revert InsufficientBalance();

        // Send native asset to funds owner
        (bool sent, ) = fundsOwner.call{value: amount}("");
        if (!sent) revert TransferFailed();

        emit FundsWithdrawn(amount);
    }

    /// @dev IFlowSchedulerAutomation.setGelatoTaskFee implementation
    function setGelatoTaskFee(uint256 _fee) external onlyFundsOwner {
        if (_fee == 0) revert ZeroFee();
        singleTaskFee = _fee;

        emit GelatoFeeSet(_fee);
    }

    /* ========== EXTERNAL FUNCTIONS CALLED BY USERS ========== */

    /// @dev IFlowSchedulerAutomation.createFlowSchedule implementation
    function createFlowSchedule(
        ISuperToken superToken,
        address receiver,
        uint32 startDate,
        uint32 startMaxDelay,
        uint32 endDate,
        int96 flowRate,
        bytes memory ctx
    ) external payable returns (bytes memory newCtx) {
        newCtx = ctx;
        address sender = _getSender(ctx);

        // Create the flow schedule
        _createFlowSchedule(
            superToken,
            sender,
            receiver,
            startDate,
            startMaxDelay,
            endDate,
            flowRate
        );

        // Create gelato tasks for the flow schedule
        _createSenderFlowTasks(superToken, sender, receiver);

        int96 currentFlowRate = getCurrentFlowRate(
            superToken,
            sender,
            receiver
        );

        // If start date is not scheduled
        if (startDate == 0) {
            // If flow is not active, create it
            if (currentFlowRate == 0) {
                cfaV1.createFlowByOperator(
                    sender,
                    receiver,
                    superToken,
                    flowRate
                );
            }
            // If flow is active, update it
            else if (currentFlowRate > 0) {
                cfaV1.updateFlowByOperator(
                    sender,
                    receiver,
                    superToken,
                    flowRate
                );
            }

            // Reset flow rate to 0, to make sure that checker can return true, when flow needs to end
            _resetFlowRateToZero(superToken, sender, receiver);
        }
    }

    /// @dev IFlowSchedulerAutomation.deleteFlowSchedule implementation
    function deleteFlowSchedule(
        ISuperToken superToken,
        address receiver,
        bytes memory ctx
    ) external returns (bytes memory newCtx) {
        newCtx = ctx;
        address sender = _getSender(ctx);

        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        // Delete the flow schedule
        _deleteFlowSchedule(superToken, sender, receiver);

        // Cancel gelato tasks for the flow schedule
        _cancelSenderFlowTasks(superToken, sender, receiver);

        int96 currentFlowRate = getCurrentFlowRate(
            superToken,
            sender,
            receiver
        );

        // If flow is active, delete it
        if (schedule.startDate == 0 && currentFlowRate > 0) {
            cfaV1.deleteFlowByOperator(sender, receiver, superToken);
        }
    }

    /// @dev IFlowSchedulerAutomation.modifyFlowSchedule implementation
    function modifyFlowSchedule(
        ISuperToken superToken,
        address receiver,
        uint32 startDate,
        uint32 startMaxDelay,
        uint32 endDate,
        int96 flowRate,
        bytes memory ctx
    ) external payable returns (bytes memory newCtx) {
        newCtx = ctx;
        address sender = _getSender(ctx);

        // Create a new flow schedule
        _createFlowSchedule(
            superToken,
            sender,
            receiver,
            startDate,
            startMaxDelay,
            endDate,
            flowRate
        );

        // Update gelato tasks for the flow schedule
        _updateSenderFlowTasks(superToken, sender, receiver);

        int96 currentFlowRate = getCurrentFlowRate(
            superToken,
            sender,
            receiver
        );

        // If start date is not scheduled or already started, create/update flow
        if (startDate == 0) {
            // If flow is not active, create it
            if (currentFlowRate == 0) {
                cfaV1.createFlowByOperator(
                    sender,
                    receiver,
                    superToken,
                    flowRate
                );
            }
            // If flow is active, update it
            else if (currentFlowRate > 0 && flowRate != currentFlowRate) {
                cfaV1.updateFlowByOperator(
                    sender,
                    receiver,
                    superToken,
                    flowRate
                );
            }

            // Reset flow rate to 0, to make sure that checker can return true, when flow needs to end
            _resetFlowRateToZero(superToken, sender, receiver);
        }
    }

    /* ========== EXTERNAL FUNCTIONS CALLED BY GELATO ========== */

    /// @dev IFlowSchedulerAutomation.executeSenderFlowStart implementation
    function executeSenderFlowStart(
        ISuperToken superToken,
        address sender,
        address receiver
    ) external onlyDedicatedMsgSender {
        if (!canExecuteFlowStart(superToken, sender, receiver))
            revert CantExecuteFlowStart();

        // Delete the task id, to know that the task has been executed
        delete taskIds[getConfigHash(superToken, sender, receiver)].startFlowId;

        // Handle fee paymet logic
        _payFee();

        // If time to start flow is valid and sender balance is 0, cancel the end flow task
        if (superToken.balanceOf(sender) == 0) {
            _cancelSenderFlowEndTask(superToken, sender, receiver);

            emit AllTasksCancelled(superToken, sender, receiver);
        }
        // Call Flow Scheduler to create the flow
        else {
            _executeCreateFlow(superToken, sender, receiver);
        }
    }

    /// @dev IFlowSchedulerAutomation.executeSenderFlowEnd implementation
    function executeSenderFlowEnd(
        ISuperToken superToken,
        address sender,
        address receiver
    ) external onlyDedicatedMsgSender {
        if (!canExecuteFlowEnd(superToken, sender, receiver))
            revert CantExecuteFlowEnd();

        // Delete the task id, to know that the task has been executed
        delete taskIds[getConfigHash(superToken, sender, receiver)].endFlowId;

        // Handle fee paymet logic
        _payFee();

        // Call Flow Scheduler to delete the flow
        _executeDeleteFlow(superToken, sender, receiver);
    }

    /// @dev IFlowSchedulerAutomation.checker implementation
    function checker(
        ISuperToken superToken,
        address sender,
        address receiver
    ) external view returns (bool canExec, bytes memory execPayload) {
        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        (, uint8 permissions, int96 flowRateAllowance) = cfaV1
            .cfa
            .getFlowOperatorData(superToken, sender, address(this));

        /**
         * @notice Automation should not execute if:
         * @notice 1. permission is not create/update/delete (7) and not create/delete (5)
         * @notice 2. scheduled flowRate is greater than allowance
         */
        if ((permissions != 7) || schedule.flowRate > flowRateAllowance) {
            // return canExec as false and non-executable payload
            return (false, "");
        }
        /**
         * @notice To execute flow end:
         * @notice 1. end date must be set (flow schedule exists)
         * @notice 2. end date must have been past
         * @notice 3. flow must have actually exist to be deleted
         */
        else if (canExecuteFlowEnd(superToken, sender, receiver)) {
            // return canExec as true and executeSenderFlowEnd payload
            return (
                true,
                abi.encodeCall(
                    this.executeSenderFlowEnd,
                    (superToken, sender, receiver)
                )
            );
        }
        /**
         * @notice To execute flow start:
         * @notice 1. start date must be set (flow schedule exists)
         * @notice 2. start date must have been past
         * @notice 3. max delay must have not been exceeded
         */
        else if (canExecuteFlowStart(superToken, sender, receiver)) {
            // return canExec as true and executeSenderFlowStart payload
            return (
                true,
                abi.encodeCall(
                    this.executeSenderFlowStart,
                    (superToken, sender, receiver)
                )
            );
        } else {
            // return canExec as false and non-executable payload
            return (false, "");
        }
    }

    /* ========== PUBLIC FUNCTIONS ========== */

    /// @dev IFlowSchedulerAutomation.getTaskIds implementation
    function getTaskIds(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public view returns (TaskIds memory ids) {
        return taskIds[getConfigHash(superToken, sender, receiver)];
    }

    /* ========== INTERNAL FUNCTIONS ========== */

    /**
     * @dev Create gelato tasks for sender flow
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     */
    function _createSenderFlowTasks(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Get gelato active tasks for sender flow
        TaskIds memory ids = getTaskIds(superToken, sender, receiver);

        // If start or end flow task ids exist, revert
        if (ids.startFlowId != bytes32(0) || ids.endFlowId != bytes32(0))
            revert SenderTasksExist();

        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        // If flow schedule doesn't exist, revert
        if (schedule.startDate == 0 && schedule.endDate == 0)
            revert FlowScheduleInvalid();

        // Create the start flow task in the automate
        bool startTaskCreated = _createSenderFlowStartTask(
            superToken,
            sender,
            receiver
        );
        // Create the end flow task in the automate
        bool endTaskCreated = _createSenderFlowEndTask(
            superToken,
            sender,
            receiver
        );

        // Handle fee deposit logic
        uint256 feeAmount = _calculateFeeAmount(
            startTaskCreated,
            endTaskCreated
        );
        _feeDeposited(sender, feeAmount);
    }

    /**
     * @dev Cancel gelato tasks for sender flow
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     */
    function _cancelSenderFlowTasks(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Get gelato active tasks for sender flow
        TaskIds memory ids = getTaskIds(superToken, sender, receiver);

        // If both start and end flow task ids don't exist, revert
        if (ids.startFlowId == bytes32(0) && ids.endFlowId == bytes32(0))
            revert SenderTasksDontExist();

        // Cancel the start flow tasks in the automate
        _cancelSenderFlowStartTask(superToken, sender, receiver);

        // Cancel the end flow tasks in the automate
        _cancelSenderFlowEndTask(superToken, sender, receiver);
    }

    /**
     * @dev Update gelato tasks for sender flow
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     */
    function _updateSenderFlowTasks(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Get gelato active tasks for sender flow
        TaskIds memory ids = getTaskIds(superToken, sender, receiver);

        // If both start and end flow task ids don't exist, revert
        if (ids.startFlowId == bytes32(0) && ids.endFlowId == bytes32(0))
            revert SenderTasksDontExist();

        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        /**
         * @notice If start flow task id doesn't exist AND start date is set (not 0)
         * @notice Should not be able to create start task if it has started
         * @notice When start flow id = 0x0, we know that the stream start was never scheduled or
         * @notice It has already started
         */
        if (ids.startFlowId == bytes32(0) && schedule.startDate != 0) {
            revert CantCreateStartTask();
        }
        /**
         * @notice If start flow task id exists AND start date is not set (0)
         * @notice Then cancel start flow task
         * @notice Batch call should also create the flow from receiver to sender
         */
        else if (ids.startFlowId != bytes32(0) && schedule.startDate == 0) {
            _cancelSenderFlowStartTask(superToken, sender, receiver);
        }

        /**
         * @notice If end flow task id doesn't exist AND end date is set (not 0)
         * @notice Then create end flow task and pay fee
         */
        if (ids.endFlowId == bytes32(0) && schedule.endDate != 0) {
            bool created = _createSenderFlowEndTask(
                superToken,
                sender,
                receiver
            );
            if (created) _feeDeposited(sender, singleTaskFee);
        }
        /**
         * @notice If end flow task id exists AND end date is not set (0)
         * @notice Then cancel end flow task
         */
        else if (ids.endFlowId != bytes32(0) && schedule.endDate == 0) {
            _cancelSenderFlowEndTask(superToken, sender, receiver);
        }
    }

    /**
     * @dev Create a task in the gelato automate to start the flow
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     * @return taskCreated Whether the new task was created or not
     */
    function _createSenderFlowStartTask(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal returns (bool taskCreated) {
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        bytes32 startTaskId = taskIds[configHash].startFlowId;

        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        // If start task id doesn't exist and start date is set, create the task
        if (startTaskId == bytes32(0) && schedule.startDate != 0) {
            taskCreated = true;

            ModuleData memory moduleData = _getModuleData(
                superToken,
                sender,
                receiver
            );

            // Create the task in the automate
            startTaskId = _createTask(
                address(this),
                abi.encode(this.executeSenderFlowStart.selector),
                moduleData,
                ETH
            );

            // Assign new start tak id
            taskIds[configHash].startFlowId = startTaskId;

            emit SenderTaskCreated(
                startTaskId,
                superToken,
                sender,
                receiver,
                FlowAction.START
            );
        }
    }

    /**
     * @dev Create a task in the gelato automate to end the flow
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     * @return taskCreated Whether the new task was created or not
     */
    function _createSenderFlowEndTask(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal returns (bool taskCreated) {
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        bytes32 endTaskId = taskIds[configHash].endFlowId;

        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        // If end task id doesn't exist and end date is set, create the task
        if (endTaskId == bytes32(0) && schedule.endDate != 0) {
            taskCreated = true;

            ModuleData memory moduleData = _getModuleData(
                superToken,
                sender,
                receiver
            );

            // Create the task in the automate
            endTaskId = _createTask(
                address(this),
                abi.encode(this.executeSenderFlowEnd.selector),
                moduleData,
                ETH
            );

            // Assign new end tak id
            taskIds[configHash].endFlowId = endTaskId;

            emit SenderTaskCreated(
                endTaskId,
                superToken,
                sender,
                receiver,
                FlowAction.END
            );
        }
    }

    /**
     * @dev Cancel the start task in the gelato automate
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     */
    function _cancelSenderFlowStartTask(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        bytes32 startTaskId = taskIds[configHash].startFlowId;

        // If start task id exists, cancel the task in the automate
        if (startTaskId != bytes32(0)) {
            delete taskIds[configHash].startFlowId;
            _cancelTask(startTaskId);

            emit SenderTaskCancelled(
                startTaskId,
                superToken,
                sender,
                receiver,
                FlowAction.START
            );
        }
    }

    /**
     * @dev Cancel the end task in the automate
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     */
    function _cancelSenderFlowEndTask(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        bytes32 endTaskId = taskIds[configHash].endFlowId;

        // If end task id exists, cancel the task in the automate
        if (endTaskId != bytes32(0)) {
            delete taskIds[configHash].endFlowId;
            _cancelTask(endTaskId);

            emit SenderTaskCancelled(
                endTaskId,
                superToken,
                sender,
                receiver,
                FlowAction.END
            );
        }
    }

    /// @dev This function will pay the fee to the gelato network
    function _payFee() internal virtual {
        // Get fee details from gelato
        (uint256 fee, address feeToken) = _getFeeDetails();

        // Valildate that fee is not greater than fee balance
        if (fee > address(this).balance) revert InsufficientBalance();

        // Call gelato to transfer the fee
        _transfer(fee, feeToken);
    }

    /**
     * @dev Validate that sender has transferred the fee to the contract
     * @param sender The sender address
     * @param expectedFee The expected fee to be transferred from sender to contract
     */
    function _feeDeposited(address sender, uint256 expectedFee) internal {
        // Validate that transferred amount is greater than expected fee
        if (msg.value < expectedFee) revert WrongAmount();

        emit GelatoFeeDeposited(sender, expectedFee);
    }

    /**
     * @dev Generate the module data for the task
     * @param superToken The super token address
     * @param sender The sender address
     * @param receiver The receiver address
     * @return moduleData The module data for the task
     */
    function _getModuleData(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal view returns (ModuleData memory moduleData) {
        // Module data for the task
        moduleData = ModuleData({
            modules: new Module[](3),
            args: new bytes[](3)
        });

        // Define the modules to be used
        moduleData.modules[0] = Module.RESOLVER;
        moduleData.modules[1] = Module.PROXY;
        moduleData.modules[2] = Module.SINGLE_EXEC;

        // Define the arguments for the modules
        moduleData.args[0] = _resolverModuleArg(
            address(this),
            abi.encodeCall(this.checker, (superToken, sender, receiver))
        );
        moduleData.args[1] = _proxyModuleArg();
        moduleData.args[2] = _singleExecModuleArg();

        return moduleData;
    }

    /**
     * @dev Calculate the fee amount that user needs to deposit
     * @param created1 Whether the first task was created or not
     * @param created2 Whether the second task was created or not
     */
    function _calculateFeeAmount(
        bool created1,
        bool created2
    ) internal view returns (uint256) {
        uint8 totalCreated = (created1 ? 1 : 0) + (created2 ? 1 : 0);
        return totalCreated * singleTaskFee;
    }

    /**
     * @dev Get the sender address (if ctx is not empty, then it's a batch call)
     * @param ctx The context of the call
     * @return sender The sender address
     */
    function _getSender(
        bytes memory ctx
    ) internal view returns (address sender) {
        if (ctx.length != 0) {
            if (msg.sender != address(cfaV1.host)) revert HostInvalid();
            sender = cfaV1.host.decodeCtx(ctx).msgSender;
        } else {
            sender = msg.sender;
        }
        // This is an invariant and should never happen.
        assert(sender != address(0));
    }
}
