pragma solidity ^0.8.14;

import {ISuperfluid, ISuperToken, SuperAppDefinitions} from "@streamable-finance/ethereum-contracts/contracts/interfaces/superfluid/ISuperfluid.sol";

interface IFlowSchedulerAutomationEvents {
    enum FlowAction {
        START,
        END
    }

    event Initialized();
    event FundsReceived(address indexed sender, uint256 amount);
    event FundsWithdrawn(uint256 amount);
    event SenderTaskCreated(
        bytes32 id,
        ISuperToken indexed superToken,
        address indexed sender,
        address indexed receiver,
        FlowAction action
    );
    event SenderTaskCancelled(
        bytes32 id,
        ISuperToken indexed superToken,
        address indexed sender,
        address indexed receiver,
        FlowAction action
    );
    event GelatoFeeDeposited(address indexed sender, uint256 amount);
    event GelatoFeeWithdrawn(address indexed sender, uint256 amount);
    event GelatoFeeSet(uint256 amount);
    event AllTasksCancelled(
        ISuperToken indexed superToken,
        address indexed sender,
        address indexed receiver
    );
}

interface IFlowSchedulerAutomation is IFlowSchedulerAutomationEvents {
    /* ========== ERRORS ========== */

    error HostInvalid();
    error NotFundsOwner();
    error InsufficientBalance();
    error TransferFailed();
    error FlowScheduleInvalid();
    error SenderTasksExist();
    error SenderTasksDontExist();
    error CantExecuteFlowStart();
    error CantExecuteFlowEnd();
    error CantCreateStartTask();
    error AllFeesCovered();
    error WrongAmount();
    error WrongFeeToken();
    error FeeTooHigh();
    error StartTaskExists();
    error ZeroFee();
    error ZeroAddressProvided();
    error ZeroVariableProvided();

    /* ========== STRUCTS ========== */

    struct TaskIds {
        bytes32 startFlowId;
        bytes32 endFlowId;
    }

    /* ========== FUNCTIONS ========== */

    /**
     * @notice Withdraw native asset from this contract (accumulated from gelato fees)
     * @param amount The amount of native asset to withdraw
     */
    function withdraw(uint256 amount) external;

    /**
     * @notice Set the gelato task fee
     * @notice In total every scheduled flow will have 1-2 tasks,
     * @notice so the total gelato task fee will be 1-2x the single gelato task fee
     * @param _fee The new gelato task fee
     */
    function setGelatoTaskFee(uint256 _fee) external;

    /**
     * @dev Create a new flow schedule
     * @dev Create gelato tasks for the flow schedule
     * @dev If start date is not scheduled, create a new flow
     * @param superToken The SuperToken to be sent
     * @param receiver The receiver account
     * @param startDate The timestamp when the stream should start (or 0 if starting not required)
     * @param startMaxDelay  How many seconds the stream is allowed to start after startDate
     * @param endDate The timestamp when the stream should stop (or 0 if closing not required)
     * @param flowRate The flowRate for the stream
     * @param ctx Streampay context used when batching operations. (or bytes(0) if not SF batching)
     * @return newCtx Returns ctx to make sure batching works
     */
    function createFlowSchedule(
        ISuperToken superToken,
        address receiver,
        uint32 startDate,
        uint32 startMaxDelay,
        uint32 endDate,
        int96 flowRate,
        bytes memory ctx
    ) external payable returns (bytes memory newCtx);

    /**
     * @dev Delete a flow schedule
     * @dev Delete gelato tasks for the flow schedule
     * @dev If flow is active, delete it
     * @param superToken The SuperToken to be sent
     * @param receiver The receiver account
     * @param ctx Streampay context used when batching operations. (or bytes(0) if not SF batching)
     * @return newCtx Returns ctx to make sure batching works
     */
    function deleteFlowSchedule(
        ISuperToken superToken,
        address receiver,
        bytes memory ctx
    ) external returns (bytes memory newCtx);

    /**
