    mapping(bytes32 => FlowSchedule) public flowSchedules; // id = keccak(supertoken, sender, receiver)

    /* ========== CONSTRUCTOR ========== */

    constructor(ISuperfluid host) {
        // Initialize CFA Library
        cfaV1 = CFAv1Library.InitData(
            host,
            IConstantFlowAgreementV1(
                address(
                    host.getAgreementClass(
                        keccak256(
                            "org.superfluid-finance.agreements.ConstantFlowAgreement.v1"
                        )
                    )
                )
            )
        );
    }

    /* ========== PUBLIC FUNCTIONS ========== */

    /// @dev IFlowScheduler.canExecuteFlowStart implementation.
    function canExecuteFlowStart(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public view returns (bool) {
        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        /**
         * @notice To execute create:
         * @notice 1. start date must be set (flow schedule exists)
         * @notice 2. start date must have been past
         * @notice 3. max delay must have not been exceeded
         */
        return
            schedule.startDate != 0 &&
            block.timestamp >= schedule.startDate &&
            block.timestamp <= schedule.startDate + schedule.startMaxDelay;
    }

    /// @dev IFlowScheduler.canExecuteFlowEnd implementation.
    function canExecuteFlowEnd(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public view returns (bool) {
        FlowSchedule memory schedule = getFlowSchedule(
            superToken,
            sender,
            receiver
        );

        /**
         * @notice To execute delete:
         * @notice 1. end date must be set (flow schedule exists)
         * @notice 2. end date must have been past
         */
        return schedule.endDate != 0 && block.timestamp >= schedule.endDate;
    }

    /// @dev IFlowScheduler.getFlowSchedule implementation.
    function getFlowSchedule(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public view returns (FlowSchedule memory schedule) {
        return flowSchedules[getConfigHash(superToken, sender, receiver)];
    }

    /// @dev IFlowScheduler.getCurrentFlowRate implementation.
    function getCurrentFlowRate(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public view returns (int96 flowRate) {
        (, flowRate, , ) = cfaV1.cfa.getFlow(superToken, sender, receiver);
        return flowRate;
    }

    /// @dev IFlowScheduler.getConfigHash implementation
    function getConfigHash(
        ISuperToken superToken,
        address sender,
        address receiver
    ) public pure returns (bytes32 configHash) {
        return keccak256(abi.encodePacked(superToken, sender, receiver));
    }

    /* ========== INTERNAL FUNCTIONS ========== */

    /**
     * @dev Creates a new flow schedule
     * @param superToken The SuperToken to be sent
     * @param sender The sender account
     * @param receiver The receiver account
     * @param startDate The timestamp when the stream should start (or 0 if starting not required)
     * @param startMaxDelay How many seconds the stream is allowed to start after startDate
     * @param endDate The timestamp when the stream should stop (or 0 if closing not required)
     * @param flowRate The flowRate for the stream (or 0 if starting not required)
     */
    function _createFlowSchedule(
        ISuperToken superToken,
        address sender,
        address receiver,
        uint32 startDate,
        uint32 startMaxDelay,
        uint32 endDate,
        int96 flowRate
    ) internal {
        // Validate flow schedule data
        _validateAddress(superToken, sender, receiver);
        _validateScheduleDates(startMaxDelay, startDate, endDate);
        if (flowRate == 0) revert ZeroFlowRate();

        // Create flow schedule (or update if already exists)
        flowSchedules[
            getConfigHash(superToken, sender, receiver)
        ] = FlowSchedule(startDate, startMaxDelay, endDate, flowRate);

        emit FlowScheduleCreated(
            superToken,
            sender,
            receiver,
            startDate,
            startMaxDelay,
            flowRate,
            endDate
        );
    }

    function _resetFlowRateToZero(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Validate flow schedule data
        _validateAddress(superToken, sender, receiver);

        delete flowSchedules[getConfigHash(superToken, sender, receiver)]
            .flowRate;

        emit FlowRateResetToZero(superToken, sender, receiver);
    }

    /**
     * @dev Deletes a flow schedule
     * @param superToken The SuperToken to be sent
     * @param sender The sender account
     * @param receiver The receiver account
     */
    function _deleteFlowSchedule(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        _validateAddress(superToken, sender, receiver);

        delete flowSchedules[getConfigHash(superToken, sender, receiver)];
        emit FlowScheduleDeleted(superToken, sender, receiver);
    }

    /**
     * @dev Executes the starting of a stream
     * @dev And deletes the flow schedule data
     * @param superToken The SuperToken to be sent
     * @param sender The sender account
     * @param receiver The receiver account
     */
    function _executeCreateFlow(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Get schedule
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        FlowSchedule memory schedule = flowSchedules[configHash];

        // Validate flow schedule data
        if (!canExecuteFlowStart(superToken, sender, receiver))
            revert FlowStartNotExecutable();

        // Delete flow schedule data to avoid reentrancy
        if (schedule.endDate == 0) {
            delete flowSchedules[configHash];
        } else {
            delete flowSchedules[configHash].startDate;
            delete flowSchedules[configHash].startMaxDelay;
            delete flowSchedules[configHash].flowRate;
        }

        // Get active stream data
        int96 currentFlowRate = getCurrentFlowRate(
            superToken,
            sender,
            receiver
        );

        // If stream is active, update the flow
        if (currentFlowRate > 0) {
            cfaV1.updateFlowByOperator(
                sender,
                receiver,
                superToken,
                schedule.flowRate
            );
        }
        // Else create the flow.
        else {
            cfaV1.createFlowByOperator(
                sender,
                receiver,
                superToken,
                schedule.flowRate
            );
        }

        emit CreateFlowExecuted(
            superToken,
            sender,
            receiver,
            schedule.startDate,
            schedule.startMaxDelay,
            schedule.flowRate,
            currentFlowRate
        );
    }

    /**
     * @dev Executes the stopping of a stream
     * @dev And deletes the flow schedule data
     * @param superToken The SuperToken to be sent
     * @param sender The sender account
     * @param receiver The receiver account
     */
    function _executeDeleteFlow(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal {
        // Get schedule
        bytes32 configHash = getConfigHash(superToken, sender, receiver);
        FlowSchedule memory schedule = flowSchedules[configHash];

        // Validate flow schedule data
        if (!canExecuteFlowEnd(superToken, sender, receiver))
            revert FlowEndNotExecutable();

        // Delete flow schedule data to avoid reentrancy
        delete flowSchedules[configHash];

        // Get active stream data
        int96 currentFlowRate = getCurrentFlowRate(
            superToken,
            sender,
            receiver
        );

        // If stream is active, delete the flow
        if (currentFlowRate > 0) {
            cfaV1.deleteFlowByOperator(sender, receiver, superToken);
        }

        emit DeleteFlowExecuted(
            superToken,
            sender,
            receiver,
            schedule.endDate,
            currentFlowRate
        );
    }

    function _validateAddress(
        ISuperToken superToken,
        address sender,
        address receiver
    ) internal pure {
        if (
            receiver == address(0) ||
            sender == address(0) ||
            address(superToken) == address(0)
        ) revert ZeroAddress();
        if (receiver == sender) revert AccountInvalid();
    }

    function _validateScheduleDates(
        uint32 startMaxDelay,
        uint32 startDate,
        uint32 endDate
    ) internal view {
        // Validate start date configuration
        if (startDate == 0) {
            if (startMaxDelay != 0) revert StartMaxDelayNotZero();
            if (endDate == 0) revert EndDateNotDefined();
        } else {
            // Else startDate != 0
            if (startDate <= block.timestamp) revert StartDateInPast();
            if (startDate >= endDate && endDate != 0)
                revert StartDateAfterEndDate();
        }

        // Validate end date configuration
        if (endDate != 0 && endDate <= block.timestamp) revert EndDateInPast();
    }
}
