import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {IUniswapV2Router02} from "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

pragma solidity 0.8.18;

contract SafoSwap is Ownable {
    IERC20 public oldSafoToken;
    IERC20 public newSafoToken;
    IUniswapV2Router02 public uniswapRouter;

    constructor() {
        oldSafoToken = IERC20(0xd57Cfb45347573f4F2471fA1572Eb79d0Ba29Fd0);
        newSafoToken = IERC20(0x7e14b6A87712A411A1ccB13b03fFD18Fd4c46936);
        uniswapRouter = IUniswapV2Router02(
            0x10ED43C718714eb63d5aA57B78B54704E256024E
        );
    }

    receive() external payable {}

    fallback() external payable {}

    function swap(uint oldSafoAmount) public {
        require(
            getNewSafoTokenBalance() >= oldSafoAmount,
            "Not enough new Safo tokens in contract."
        );

        oldSafoToken.transferFrom(msg.sender, address(this), oldSafoAmount);
        // Approve the router to spend _tokenIn
        oldSafoToken.approve(address(uniswapRouter), oldSafoAmount);

        address[] memory path = new address[](2);
        path[0] = address(oldSafoToken);
        path[1] = uniswapRouter.WETH();

        uniswapRouter.swapExactTokensForETHSupportingFeeOnTransferTokens(
            oldSafoAmount,
            0,
            path,
            address(this),
            block.timestamp + 100
        );

        (bool success, ) = payable(owner()).call{value: address(this).balance}(
            ""
        );

        require(success, "Transfer failed.");

        newSafoToken.transfer(msg.sender, oldSafoAmount);
    }

    function changeRouter(address _router) public onlyOwner {
        uniswapRouter = IUniswapV2Router02(_router);
    }

    function changeNewSafoToken(address _newSafoToken) public onlyOwner {
        newSafoToken = IERC20(_newSafoToken);
    }

    function changeOldSafoToken(address _oldSafoToken) public onlyOwner {
        oldSafoToken = IERC20(_oldSafoToken);
    }

    function withdrawOldSafoToken(uint amount) public onlyOwner {
        oldSafoToken.transfer(msg.sender, amount);
    }

    function withdrawNewSafoToken(uint amount) public onlyOwner {
        newSafoToken.transfer(msg.sender, amount);
    }

    function withdrawBeans() public onlyOwner {
        (bool success, ) = payable(owner()).call{value: address(this).balance}(
            ""
        );

        require(success, "Transfer failed.");
    }

    function getNewSafoTokenBalance() public view returns (uint) {
        return newSafoToken.balanceOf(address(this));
    }

    function getOldSafoTokenBalance() public view returns (uint) {
        return oldSafoToken.balanceOf(address(this));
    }
}
