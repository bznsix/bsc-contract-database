import "../lib/layerzero/contracts/interfaces/ILayerZeroEndpoint.sol";
import "../lib/openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/IDCBTiers.sol";

contract Source is Ownable {
    ILayerZeroEndpoint public immutable lzEndpoint;
    IDCBTiers public immutable dcbTiers;
    uint16 public immutable dstChainId;
    address public dstAddress;
    bytes public trustedRemote;

    event UserInfoSent(
        address indexed user,
        bool flag,
        uint256 pos,
        uint256 multiplier
    );

    constructor(
        address _lzEndpoint,
        uint16 _dstChainId,
        address _dcbTiers
    ) Ownable(msg.sender) {
        lzEndpoint = ILayerZeroEndpoint(_lzEndpoint);
        dcbTiers = IDCBTiers(_dcbTiers);
        dstChainId = _dstChainId;
    }

    function setDestination(address _dstAddress) external onlyOwner {
        dstAddress = _dstAddress;
        trustedRemote = abi.encodePacked(_dstAddress, address(this));
    }

    function getFee(bytes calldata data) external view returns (uint256) {
        (uint256 fee, ) = lzEndpoint.estimateFees(
            dstChainId,
            dstAddress,
            data,
            false,
            ""
        );
        return fee;
    }

    function sendUserInfo(address _user) external payable {
        (bool flag, uint256 pos, uint256 multiplier) = dcbTiers.getTierOfUser(
            _user
        );
        bytes memory data = abi.encode(_user, flag, pos, multiplier);
        (uint256 fee, ) = lzEndpoint.estimateFees(
            dstChainId,
            dstAddress,
            data,
            false,
            ""
        );
        fee += fee / 100; // 1% extra fee
        require(msg.value >= fee, "Source: insufficient fee");
        payable(msg.sender).transfer(msg.value - fee);
        lzEndpoint.send{value: fee}(
            dstChainId,
            trustedRemote,
            data,
            payable(msg.sender),
            address(0x0),
            bytes("")
        );

        emit UserInfoSent(_user, flag, pos, multiplier);
    }
}
