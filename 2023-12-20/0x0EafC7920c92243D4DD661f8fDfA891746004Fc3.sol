// - if user deposits into pool that has lockingTime -> referrer will also be credited a predefined amount of reward (equal 10% of reward that referee got) with the same lockingTime, and can claim when lockingTime ends
// - if user deposits into pool that has no lockingTime -> referrer will get reward

// FORMULAR to get the reward amount:
// (<number of tokens staked> * <APR percentage> / 100) * <staked time> / <365 days>
// if the staked lock has unlocked and user do not unstake, they will not any extra reward when keeping token in pool

// Used for frontend display
struct StakeInfo {
    uint256 stakeId;
    uint16 aprBps;
    address owner;
    uint256 amount;
    // locked term: reward will be calculated at the time user stakes
    // flexible term: reward will be calculated based on how much time user stakes
    uint256 reward;
    uint256 depositEpoch;
    uint256 unlockEpoch;
    uint256 unstakeEpoch;
    address referrer;
}

struct StakePool {
    uint256 poolId;
    uint16 aprBps; // APR - set to 0 to disable this pool
    uint256 lockingPeriod; // in secs
