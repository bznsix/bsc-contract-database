    using EnumerableSet for EnumerableSet.UintSet;

    IERC20 public stakingToken;
    uint16 public constant BPS_DENOMINATOR = 1_00_00; // 100%
    uint16 public referrerRewardBps;
    mapping(uint256 => StakeInfo) public stakesMap;
    mapping(uint256 => StakePool) public stakePoolsMap;
    mapping(address => EnumerableSet.UintSet) userStakesMap;
    uint256 public stakeIdCursor = 0;
    uint256 public poolIdCursor = 0;

    uint256 public claimedRewardAmount;
    uint256 public currentStakedAmount;
    uint256 public currentLockedTermRewardAmount; // ofc this dont include flexible term rewards

    constructor(address admin, address stakingTokenAddress_) {
        address deployer = msg.sender;
        _grantRole(DEFAULT_ADMIN_ROLE, admin);
        _grantRole(DEFAULT_ADMIN_ROLE, deployer);
        stakingToken = IERC20(stakingTokenAddress_);
        // setup staking pools
        // addStakingPool(10_00, 0); // no lock -> 10% APR
        addStakingPool(38_00, 1 weeks); // 1 week lock -> 38% APR
        addStakingPool(200_00, 4 weeks); // 1 month lock -> 200% APR
        // referrer will get commission reward equal 10% of the referee's staking reward
        updateReferrerRewardBps(10_00); // 10%
        revokeRole(DEFAULT_ADMIN_ROLE, deployer);
    }

    modifier onlyAdmin() {
        require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Access Forbidden");
        _;
    }

    event StakingPoolAdded(uint256 id, uint256 aprBps, uint256 lockingPeriod);
    event StakingPoolUpdated(
        uint256 id,
        uint256 aprBpsBefore,
        uint256 lockingPeriodBefore,
        uint256 aprBpsAfter,
        uint256 lockingPeriodAfter
    );
    event RefererRewardBpsUpdated(uint16);
    event UserStaked(
        address indexed user,
        uint256 timestamp,
        uint256 stakeId,
        address referrer
    );
    event UserUnstaked(
        address indexed user,
        uint256 timestamp,
        uint256 stakeId,
        uint256 reward
    );

    // ================================
    // INTERNAL region
    // ================================

    // ================================
    // ADMIN write region
    // ================================

    function pause() public onlyAdmin {
        _pause();
    }

    function unpause() public onlyAdmin {
        _unpause();
    }

    function addStakingPool(
        uint16 aprBps_,
        uint256 lockingPeriod_
    ) public onlyAdmin {
        require(aprBps_ > 0, "APR must greater than zero");
        poolIdCursor++;
        stakePoolsMap[poolIdCursor] = StakePool({
            poolId: poolIdCursor,
            aprBps: aprBps_,
            lockingPeriod: lockingPeriod_
        });
        emit StakingPoolAdded(poolIdCursor, aprBps_, lockingPeriod_);
    }

    // set aprBps_ to 0 disable the pool
    function updateStakingPool(
        uint256 id_,
        uint16 aprBps_,
        uint256 lockingPeriod_
    ) public onlyAdmin {
        require(id_ > 0 && id_ <= poolIdCursor, "Stake pool does not exist");
        uint256 aprBpsBefore = stakePoolsMap[id_].aprBps;
        uint256 lockingPeriodBefore = stakePoolsMap[id_].lockingPeriod;
        stakePoolsMap[id_].aprBps = aprBps_;
        stakePoolsMap[id_].lockingPeriod = lockingPeriod_;
        emit StakingPoolUpdated(
            id_,
            aprBpsBefore,
            lockingPeriodBefore,
            aprBps_,
            lockingPeriod_
        );
    }

    function updateReferrerRewardBps(uint16 bps_) public onlyAdmin {
        require(bps_ <= BPS_DENOMINATOR);
        referrerRewardBps = bps_;
        emit RefererRewardBpsUpdated(bps_);
    }

    // ================================
    // PUBLIC read region
    // ================================

    function _getRewardAmount(
        uint16 aprBps_,
        uint256 stakedAmount_,
        uint256 stakeTime_
    ) public pure returns (uint256) {
        return
            (((stakedAmount_ * aprBps_) / BPS_DENOMINATOR) * stakeTime_) /
            365 days;
    }

    function getUserStakes(
        address account_
    ) public view returns (uint256[] memory) {
        return userStakesMap[account_].values();
    }

    // TODO: calculate accumulated reward if user stakes in flexible term
    function getUserStakesEx(
        address account_
    ) public view returns (StakeInfo[] memory) {
        uint256 size = userStakesMap[account_].length();
        StakeInfo[] memory userStakes = new StakeInfo[](size);
        for (uint i = 0; i < size; i++) {
            userStakes[i] = stakesMap[userStakesMap[account_].at(i)];
        }
        return userStakes;
    }

    function getStakePoolList() public view returns (StakePool[] memory) {
        StakePool[] memory stakePoolList = new StakePool[](poolIdCursor);
        if (poolIdCursor == 0) return stakePoolList;
        for (uint256 i = 1; i <= poolIdCursor; i++) {
            stakePoolList[i - 1] = stakePoolsMap[i];
        }
        return stakePoolList;
    }

    function getStakeInfo(uint256 stakeId_) public view returns (StakeInfo memory) {
        return stakesMap[stakeId_];
    }

    function getPoolInfo(uint256 poolId_) public view returns (StakePool memory) {
        return stakePoolsMap[poolId_];
    }

    // warning: this view function is un-tested
    // maycause out of gas since it contains a loop
    function getFlexibleTermPendingRewardAmount() public view returns (uint256) {
        uint256 blockTimestamp = block.timestamp;
        uint256 answer = 0;
        for(uint256 i=0; i<=stakeIdCursor; i++) {
            // remove stakes that is locked term
            if(stakesMap[i].unlockEpoch != stakesMap[i].depositEpoch) continue;
            // remove stakes that has reward -> locked term
            if(stakesMap[i].reward > 0) continue;
            // remove stakes that has withdrawn
            if(stakesMap[i].unstakeEpoch > 0) continue;
            // remove stakes that has 0 staked amount -> it is a reward stake
            if(stakesMap[i].amount == 0) continue;
            uint256 reward = _getRewardAmount(stakesMap[i].aprBps, stakesMap[i].amount, blockTimestamp - stakesMap[i].depositEpoch);
            if(stakesMap[i].referrer != address(0)) {
                reward += reward * referrerRewardBps / BPS_DENOMINATOR;
            }
            answer += reward;
        }
        return answer;
