        uint256 poolId_,
        uint256 amount_,
        address referrer_
    ) public nonReentrant whenNotPaused returns (uint256) {
        address msgSender = msg.sender;
        require(amount_ > 0, "Stake amount must greater than zero");
        require(
            stakingToken.balanceOf(msgSender) >= amount_,
            "Insufficient token balance"
        );
        require(
            stakingToken.allowance(msgSender, address(this)) >= amount_,
            "Insufficient token allowance"
        );
        require(stakePoolsMap[poolId_].aprBps > 0, "Stake pool inactive or does not exist");
        uint256 reward = _getRewardAmount(
            stakePoolsMap[poolId_].aprBps,
            amount_,
            stakePoolsMap[poolId_].lockingPeriod
        );
        uint256 depositEpoch = block.timestamp;
        uint256 unlockEpoch = depositEpoch +
            stakePoolsMap[poolId_].lockingPeriod;
        require(
            stakePoolsMap[poolId_].lockingPeriod == 0 || reward > 0,
            "Stake amount too small"
        );
        uint256 userStakeId = ++stakeIdCursor;
        currentStakedAmount += amount_;
        currentLockedTermRewardAmount += reward;
        if(referrer_ == msgSender) referrer_ = address(0);
        stakesMap[userStakeId] = StakeInfo({
            stakeId: userStakeId,
            aprBps: stakePoolsMap[poolId_].aprBps,
            reward: reward,
            owner: msgSender,
            amount: amount_,
            depositEpoch: depositEpoch,
            unlockEpoch: unlockEpoch,
            unstakeEpoch: 0,
            referrer: referrer_
        });
        userStakesMap[msgSender].add(userStakeId);
        // has referrer
        if (referrer_ != address(0)) {
            // purpose of this line is to show in referer's frontend. withdraw is not possible
            userStakesMap[referrer_].add(userStakeId);
            if (stakePoolsMap[poolId_].lockingPeriod == 0) {
                // flexible term. referrer will get reward when user withdraws token
            } else {
                // locked term. referrer will be credited a reward with the same lock time, no yeild and equal 10% user's reward amount
                uint256 referrerReward = (reward * referrerRewardBps) /
                    BPS_DENOMINATOR;
                // referrerReward can be zero if staked amount small enough
                // this to keep referrerStakeId always defined
                currentLockedTermRewardAmount += referrerReward;
                uint256 referrerStakeId = ++stakeIdCursor;
                stakesMap[referrerStakeId] = StakeInfo({
                    stakeId: referrerStakeId,
                    aprBps: 0,
                    owner: referrer_,
                    reward: referrerReward,
                    amount: 0,
                    depositEpoch: depositEpoch,
                    unlockEpoch: unlockEpoch,
                    unstakeEpoch: 0,
                    referrer: msgSender // actually it is referee :D
                });
                userStakesMap[referrer_].add(referrerStakeId);
            }
        }
        stakingToken.transferFrom(msgSender, address(this), amount_);
        emit UserStaked(msgSender, block.timestamp, userStakeId, referrer_);
        return userStakeId;
    }

    /**
     * Allow user to unstake
     * @dev requirements
     * - contract must currently operating (not paused)
     * - stake must exist and belong to sender
     * - stake must unlocked and not unstaked
     * - flexible term: rewards will be calculated and sent to owner (including staked amount) + referrer (referrer get an amount equal 10% of owner's reward)
     * - locked term: reward and staked amount will be sent to owner
     * - stake must be marked as `unstaked` after user unstakes
     * @param stakeId_ the stake id
     * @notice storage write
     * - unstakeEpoch will be set to non-zero (eq block.timestamp)
     * - reward will be set for flexible term
     * - token transfer to staker and optional referrer
     */
    function unstake(uint256 stakeId_) public nonReentrant whenNotPaused {
        address msgSender = msg.sender;
        StakeInfo storage stakeInfo = stakesMap[stakeId_];
        require(stakeInfo.owner == msgSender, "Only owner can withdraw");
        require(
            block.timestamp >= stakeInfo.unlockEpoch,
            "Stake has not unlocked yet"
        );
        require(stakeInfo.unstakeEpoch == 0, "Stake has withdrawn");
        stakeInfo.unstakeEpoch = block.timestamp;
        currentStakedAmount -= stakeInfo.amount;
        // if flexible term. reward is currently 0 because it is not being calculated at stake time
        if (stakeInfo.reward == 0) {
            // no staked amount mean this stake is rewarded
            if(stakeInfo.amount > 0) {
                uint256 reward = _getRewardAmount(
                    stakeInfo.aprBps,
                    stakeInfo.amount,
                    block.timestamp - stakeInfo.depositEpoch
                );
                require(reward > 0, "No reward to send yet");
                stakeInfo.reward = reward;
                claimedRewardAmount += reward;
                if (stakeInfo.referrer != address(0)) {
                    uint256 referrerReward = (reward * referrerRewardBps) /
                        BPS_DENOMINATOR;
                    if (referrerReward > 0) {
                        claimedRewardAmount += referrerReward;
                        stakingToken.transfer(
                            stakeInfo.referrer,
                            referrerReward
                        );
                    }
                }
                stakingToken.transfer(msgSender, stakeInfo.amount);
                stakingToken.transfer(msgSender, reward); // this make eaiser to track the reward
                emit UserUnstaked(msgSender, block.timestamp, stakeId_, reward);
            } else {
                emit UserUnstaked(msgSender, block.timestamp, stakeId_, stakeInfo.reward);
            }
        } else {
            // locked term
            currentLockedTermRewardAmount -= stakeInfo.reward;
            claimedRewardAmount += stakeInfo.reward;
            stakingToken.transfer(msgSender, stakeInfo.amount);
            stakingToken.transfer(msgSender, stakeInfo.reward); // this make eaiser to track the reward
            emit UserUnstaked(msgSender, block.timestamp, stakeId_, stakeInfo.reward);
        }
        
    }
}
