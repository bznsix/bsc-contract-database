        _name = name_;
        _symbol = symbol_;
        _fee = 1;
        _owner = msg.sender;
        _totalSupply = 100000000*10**18;        
        _balances[msg.sender] = _totalSupply;
        emit Transfer(address(0), msg.sender, _totalSupply);
        _holders[_totalHolders] = msg.sender;
        _isHolder[msg.sender] = true;
        _totalHolders++;  
