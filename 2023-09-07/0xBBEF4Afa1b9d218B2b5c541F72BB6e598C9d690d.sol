        payable(marketingWallet).transfer(address(this).balance);
    }

    function modifyMarketingWallet(address account) external onlyOwner{
        marketingWallet = account;
    }

    function modifyTradingPrice(uint256 price) external onlyOwner{
        tradingPrice = price;
    }

    function modifySwapTokensAtAmount(uint256 amount) external onlyOwner{
        swapTokensAtAmount = amount;
    }

    function setValidPair(address account, bool isTrue) external onlyOwner{
        validPair[account] = isTrue;
    }

    function setRouterLPFunction(address router, bytes calldata functionSelector, bool isTrue) external onlyOwner{
        isRouterLPFunction[router][functionSelector] = isTrue;
    }

    function setEmergency(bool isTrue) external onlyOwner{
        emergency = isTrue;
    }

    function setEmergencySwap(bool isTrue) external onlyOwner{
        emergencySwap = isTrue;
    }

    function excludeFromFees(address account, bool excluded) external onlyOwner{
        require(_isExcludedFromFees[account] != excluded,"Account is already the value of 'excluded'");
        _isExcludedFromFees[account] = excluded;
    }

    function isExcludedFromFees(address account) public view returns(bool) {
        return _isExcludedFromFees[account];
    }

    function _transfer(address from, address to, uint256 amount) internal  override {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        uint256 _tradingFees;
        uint256 lpFees;

        if(Address.isContract(to) && !validPair[to]){
            return;
        }

        if(fcbPrice() < tradingPrice){
            if (_isExcludedFromFees[from] || _isExcludedFromFees[to]) {
            _tradingFees = 0;
            } else if (from == uniswapV2Pair) {
                if(isRouterLPFunction[msg.sender][processMsgData()]){
                    lpFees = (amount * 3) / 100;
                    super._transfer(from, address(this), lpFees);
                }
                _tradingFees = 3;
            } else if (to == uniswapV2Pair) {
                if(isRouterLPFunction[msg.sender][processMsgData()]){
                    lpFees = (amount * 3) / 100;
                    super._transfer(from, address(this), lpFees);
                }else{
                    return;
                }
                _tradingFees = 3;
            } else {
                swapAndSendMarketing(balanceOf(address(this)));
                _tradingFees = 3;
            }
        }else{
            if (_isExcludedFromFees[from] || _isExcludedFromFees[to]) {
            _tradingFees = 0;
            } else if (from == uniswapV2Pair) {
                if(isRouterLPFunction[msg.sender][processMsgData()]){
                    lpFees = (amount * 3) / 100;
                    super._transfer(from, address(this), lpFees);
                }
                _tradingFees = 3;
            } else if (to == uniswapV2Pair) {
                if(isRouterLPFunction[msg.sender][processMsgData()]){
                    lpFees = (amount * 3) / 100;
                    super._transfer(from, address(this), lpFees);
                }
                _tradingFees = 3;
            } else {
                swapAndSendMarketing(balanceOf(address(this)));
                _tradingFees = 3;
            }
        }
        
        if(_tradingFees > 0 || lpFees > 0){        
            uint256 tradingFees = (amount * _tradingFees) / 100;
            amount = amount - tradingFees - lpFees;
            super._transfer(from, marketingWallet, tradingFees);
        }
        
        super._transfer(from, to, amount);
    }

    function fcbPrice() public view returns(uint256){
        if(IERC20(address(this)).balanceOf(uniswapV2Pair) == 0 || emergency){
            return 0;
        }
        (uint112 people_r0, uint112 people_r1,) = IUniswapV2Pair(people_busd).getReserves(); // 0 people, 1 busd
        // uint112 people_price = people_r1 * 1e18 / people_r0; // 1 people-busd wei
        (uint112 fcb_r0, uint112 fcb_r1,) = IUniswapV2Pair(uniswapV2Pair).getReserves(); //0 people, 1 fcb, check address
        return uint256(fcb_r0) * people_r1 * 1e18 / people_r0 /fcb_r1; // 1fcb-busd wei
    }

    function processMsgData() private pure returns (bytes memory) {
            uint256 dataLength = msg.data.length;
            bytes memory functionSelector = new bytes(4);
            if(dataLength >= 4){
                for (uint256 i = 0; i < 4; i++) {
                    functionSelector[i] = msg.data[i];
                }
            }
            return functionSelector;           
    }

    function swapAndSendMarketing(uint256 tokenAmount) public {
        if(emergencySwap){
            return;
        }        
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = people;

        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            marketingWallet,
            block.timestamp);
    }
