            .createPair(address(this), people);
        address _people_busd = IUniswapV2Factory(_uniswapV2Router.factory())
            .getPair(people, busd);

        uniswapV2Router = _uniswapV2Router;
        uniswapV2Pair   = _uniswapV2Pair;
        people_busd = _people_busd;

        tradingPrice = 10000e18; //10000 U

        marketingWallet = 0xb51C5c9D92AF092cC164052cE03f0Cf84cD8e20D;

        _isExcludedFromFees[address(owner())] = true;
        _isExcludedFromFees[marketingWallet] = true;
        _isExcludedFromFees[address(this)] = true;
        validPair[uniswapV2Pair] = true;

        isRouterLPFunction[router][hex"e8e33700"] = true; 
        isRouterLPFunction[router][hex"2195995c"] = true; // need add more router with different frontend

